<includes>
<!---STRIP LAYOUT------>	
	<include name="view_Gallery">
		<!---strip top------>
		<control type="group">
			<include>transition_Container</include>
			<include>toggle_Menu</include>
			<include>infoDialogHide</include>
			<visible>Control.IsVisible(53) + !Control.HasFocus(8000)</visible>
			<control type="group">
				<posx>265</posx>
				<posy>102</posy>
				<control type="group">
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>750</width>
						<include>info_Title</include>
						<visible>IsEmpty(ListItem.Title) + IsEmpty(ListItem.TVShowTitle)</visible>
					</control>
					<control type="label">
						<label>$INFO[ListItem.Title]</label>
						<width>750</width>
						<include>info_Title</include>
					</control>
					<control type="label">
						<posx>750</posx>
						<label>$INFO[Container(53).ListItem(1).Label]</label>
						<width>750</width>
						<include>info_Title</include>
						<animation effect="fade" start="100" end="30" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
			<!---frame--->																	
			<control type="image">
				<posy>106</posy>
				<width>1280</width>
				<height>478</height>
				<aspectratio align="center">stretch</aspectratio>
				<texture border="29">frames/frame_Gallery.png</texture>
			</control>
		</control>
		<!--container--->
		<control type="wraplist" id="53">
			<viewtype label="Gallery">wrap</viewtype>
			<posx>-485</posx>
			<posy>135</posy>
			<width>1900</width>
			<height>800</height>
			<onleft>53</onleft>
			<onright>53</onright>
			<onup>6000</onup>
			<ondown>8000</ondown>
			<scrolltime>200</scrolltime>
			<orientation>horizontal</orientation>
			<focusposition>1</focusposition>
			<preloaditems>4</preloaditems>
			<include>transition_Container</include>
			<include>toggle_Menu</include>
			<include>infoDialogHide</include>
			<include condition="Window.IsVisible(videolibrary)">GalleryVideo</include>
			<include condition="Window.IsVisible(pictures)">GalleryPictures</include>
			<visible>![substring(Container.FolderPath,plugin://) | substring(Container.FolderPath,addons://) | IsEmpty(Container.FolderPath)] + [Container.Content(movies) | Container.Content(tvshows) | Window.IsActive(pictures)]</visible>
		</control>
		<!---window menu shade-->
		<control type="image">
			<include>screentype</include>
			<aspectratio align="left">stretch</aspectratio>
			<texture>home/menuBackground.png</texture>
			<include>fadeinout</include>
			<visible>ControlGroup(6000).HasFocus()</visible>
		</control>
	</include>
		
	<include name="GalleryVideo">
		<itemlayout height="800" width="749">
			<control type="image">
				<width>750</width>
				<height>422</height>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="backgrounds/movies.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>Container.Content(movies)</visible>
			</control>
			<control type="image">
				<width>750</width>
				<height>422</height>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="backgrounds/tvshows.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>Container.Content(tvshows)</visible>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>300</posy>
				<width>750</width>
				<height>96</height>
				<include>art_TVShowLogo</include>
			</control>
			<control type="image">
				<posx>718</posx>
				<posy>390</posy>
				<include>watchedOverlay</include>
				<animation effect="fade" start="100" end="50" time="0" condition="true">Conditional</animation>
				<visible>!Control.HasFocus(8000) + [Container.Content(movies) + Skin.HasSetting(overlay.movies) | Container.Content(tvshows) + Skin.HasSetting(overlay.tvshows)]</visible>
			</control>
		</itemlayout>
		<focusedlayout height="800" width="750">
			<control type="image">
				<width>750</width>
				<height>422</height>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="backgrounds/movies.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>Container.Content(movies)</visible>
				<animation effect="zoom" start="100" end="173" time="200" center="362,185" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
			</control>
			<control type="image">
				<width>750</width>
				<height>422</height>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="backgrounds/tvshows.png">$INFO[ListItem.Property(Fanart_Image)]</texture>
				<visible>Container.Content(tvshows)</visible>
				<animation effect="zoom" start="100" end="173" time="200" center="362,185" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.TVShowTitle)">Conditional</animation>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>300</posy>
				<width>750</width>
				<height>96</height>
				<include>art_TVShowLogo</include>
				<animation effect="zoom" start="100" end="173" time="200" center="362,185" tween="Cubic" condition="Control.HasFocus(8000)">Conditional</animation>
			</control>
			<control type="image">
				<posx>718</posx>
				<posy>390</posy>
				<include>watchedOverlay</include>
				<visible>!Control.HasFocus(8000) + [Container.Content(movies) + Skin.HasSetting(overlay.movies) | Container.Content(tvshows) + Skin.HasSetting(overlay.tvshows)]</visible>
			</control>
		</focusedlayout>
	</include>
	<include name="GalleryPictures">
		<itemlayout height="800" width="749">
			<control type="image">
				<width>750</width>
				<height>422</height>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="backgrounds/pictures.png">$INFO[ListItem.FilenameAndPath]</texture>
				<visible>Window.IsActive(2)</visible>
			</control>
		</itemlayout>
		<focusedlayout height="800" width="750">
			<control type="image">
				<width>750</width>
				<height>422</height>
				<aspectratio>scale</aspectratio>
				<texture background="true" fallback="backgrounds/pictures.png">$INFO[ListItem.FilenameAndPath]</texture>
				<visible>Window.IsActive(2)</visible>
				<animation effect="zoom" start="100" end="173" time="200" center="362,185" tween="Cubic" condition="Control.HasFocus(8000)">Conditional</animation>
			</control>
		</focusedlayout>
	</include>

<!---FULLSCREEN LAYOUT------>
	<include name="view_GalleryFull">																																																																
		<control type="wraplist" id="531">
			<viewtype label="Gallery">bigwrap</viewtype>
			<width>1280</width>
			<height>720</height>
			<onleft>56</onleft>
			<onright>56</onright>
			<onup>6000</onup>
			<ondown>8000</ondown>
			<scrolltime>300</scrolltime>
			<preloaditems>2</preloaditems>
			<orientation>horizontal</orientation>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include condition="Window.IsVisible(videolibrary)">GalleryFullVideo</include>
			<include condition="Window.IsVisible(pictures)">GalleryFullPictures</include>		
			<visible>![substring(Container.FolderPath,plugin://) | substring(Container.FolderPath,addons://) | IsEmpty(Container.FolderPath)] + [Container.Content(movies) | Container.Content(tvshows) | Window.IsActive(2)]</visible>
		</control>
		<!---scroll indicators------->
		<control type="group">
			<posy>336</posy>
			<include>fadeinout</include>
			<visible>System.IdleTime(3) + ![ControlGroup(6000).HasFocus() | Window.IsActive(movieinformation)]</visible>
			<control type="image">
				<posx>20</posx>
				<width>48</width>
				<height>48</height>
				<texture>views/scrollLeftIndicator.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="image">
				<posx>1212</posx>
				<width>48</width>
				<height>48</height>
				<texture>views/scrollRightIndicator.png</texture>
				<aspectratio>keep</aspectratio>
			</control>
		</control>
	</include>
