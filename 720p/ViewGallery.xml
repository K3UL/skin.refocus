<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="GalleryLayoutCommons">
		<control type="group">
			<width>$PARAM[FrameWidth]</width>
			<height>$PARAM[FrameHeight]</height>
			<control type="image">
				<width>$PARAM[FrameWidth]</width>
				<height>$PARAM[FrameHeight]</height>
				<texture>$PARAM[FrameState]</texture>
				<visible>$PARAM[ShowFrame]</visible>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<left>$PARAM[ArtLeft]</left>
				<top>$PARAM[ArtTop]</top>
				<width>$PARAM[ArtWidth]</width>
				<height>$PARAM[ArtHeight]</height>
				<texture background="true">thumbs/default_Landscape.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="image">
				<texture>$INFO[ListItem.ActualIcon]</texture>
				<width>$PARAM[IconSize]</width>
				<height>$PARAM[IconSize]</height>
				<centerleft>50%</centerleft>
				<centertop>50%</centertop>
				<visible>IsEmpty(ListItem.Thumb)</visible>
			</control>
			<control type="image">
				<left>$PARAM[ArtLeft]</left>
				<top>$PARAM[ArtTop]</top>
				<width>$PARAM[ArtWidth]</width>
				<height>$PARAM[ArtHeight]</height>
				<texture background="true">$VAR[art:Landscape]</texture>
				<aspectratio>scale</aspectratio>
			</control>
			<control type="group">
				<right>23</right>
				<bottom>23</bottom>
				<width>$PARAM[StatusSize]</width>
				<height>$PARAM[StatusSize]</height>
				<include>status_Info</include>
				<visible>!Control.HasFocus(8000)</visible>
			</control>
			<control type="image">
				<centerleft>50%</centerleft>
				<bottom>10</bottom>
				<width>50%</width>
				<aspectratio align="center" aligny="bottom">keep</aspectratio>
				<include>art_Logo</include>
				<visible>$PARAM[ShowLogo]</visible>
			</control>
		</control>
	</include>


<!--STRIP LAYOUT-->	
	<include name="view_Gallery">
		<!--content detail-->
		<control type="group">
			<visible>Control.IsVisible(53)</visible>
			<include>transition_Info</include>
			<include>toggle_Menu</include>
			<include>transition_Content</include>
			<!--flags-->
			<control type="image">
				<left>140</left>
				<bottom>74</bottom>
				<include>flag_Studio</include>
			</control>
			<!--strip bottom-->
			<control type="group">
				<left>265</left>
				<top>595</top>
				<control type="group">
					<control type="label">
						<label>$VAR[gallery_Header]</label>
						<width>975</width>
						<textcolor>Color1</textcolor>
						<font>regular-U</font>
						<include>detail_Title</include>
					</control>
					<control type="group">
						<top>24</top>
						<control type="textbox">
							<width>975</width>
							<height min="25" max="50">auto</height>
							<label>$VAR[media:Info]</label>
							<aligny>top</aligny>
							<include>detail_Sub</include>
							<visible>[Container.Content(movies) | Container.Content(tvshows)] + !SubString(ListItem.Icon,Default)</visible>
						</control>
						<control type="label">
							<label>[UPPERCASE]$INFO[ListItem.PictureResolution,$LOCALIZE[21805] - ][/UPPERCASE]</label>
							<width>975</width>
							<include>detail_Sub</include>
							<visible>Window.IsActive(Pictures)</visible>
						</control>
					</control>
				</control>
			</control>
		</control>

		<!--strip top-->
		<control type="group">
			<include>toggle_Menu</include>
			<include>transition_Content</include>
			<include>transition_Info</include>
			<visible>Control.IsVisible(53)</visible>
			<control type="group">
				<left>265</left>
				<top>93</top>
				<control type="group">
					<control type="label">
						<label>$INFO[ListItem.Label]</label>
						<width>750</width>
						<include>detail_Title</include>
					</control>
					<control type="label">
						<left>772</left>
						<label>$INFO[Container(53).ListItem(1).Label]</label>
						<width>750</width>
						<include>detail_Title</include>
						<animation effect="fade" start="100" end="30" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
			<!--container-->
			<control type="wraplist" id="53">
				<viewtype label="31111">info</viewtype>
				<left>-515</left>
				<top>129</top>
				<width>1900</width>
				<height>800</height>
				<onleft>53</onleft>
				<onright>53</onright>
				<onup>6000</onup>
				<ondown condition="!Window.IsActive(Pictures)">8000</ondown>
				<ondown condition="Window.IsActive(Pictures)">71</ondown>
				<focusposition>1</focusposition>
				<include>global_Scrolltime</include>
				<pagecontrol>71</pagecontrol>
				<orientation>horizontal</orientation>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Window.IsActive(pictures)</visible>
				<itemlayout width="770" height="442">
					<include name="GalleryLayoutCommons">
						<param name="ShowFrame" value="true" />
						<param name="FrameState" value="frames/frame-nf.png" />
						<param name="FrameWidth" value="770"/>
						<param name="FrameHeight" value="442"/>
						<param name="ArtLeft" value="10"/>
						<param name="ArtTop" value="10"/>
						<param name="ArtWidth" value="750"/>
						<param name="ArtHeight" value="422"/>
						<param name="IconSize" value="96"/>
						<param name="StatusSize" value="28" />
						<param name="ShowLogo" value="false" />
					</include>
				</itemlayout>
				<focusedlayout width="770" height="442">
					<control type="group">
						<animation effect="zoom" start="100" end="173" time="200" center="363,205" tween="Cubic" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)">Conditional</animation>
						<include name="GalleryLayoutCommons">
							<param name="ShowFrame" value="false"/>
							<param name="FrameState" value="frames/frame-nf.png"/>
							<param name="FrameWidth" value="770"/>
							<param name="FrameHeight" value="442"/>
							<param name="ArtLeft" value="10"/>
							<param name="ArtTop" value="10"/>
							<param name="ArtWidth" value="750"/>
							<param name="ArtHeight" value="422"/>
							<param name="IconSize" value="96"/>
							<param name="StatusSize" value="28" />
							<param name="ShowLogo" value="false" />
						</include>
					</control>
				</focusedlayout>
			</control>
			<!--frame-->															
			<control type="image">
				<left>255</left>
				<top>129</top>
				<width>770</width>
				<height>442</height>
				<aspectratio align="center">stretch</aspectratio>
				<texture>frames/frame_Landscape-fo.png</texture>
				<animation type="Conditional" condition="Control.HasFocus(8000) + !IsEmpty(ListItem.Title)" reversible="true">
					<effect type="zoom" time="200" center="640,330" start="100"  end="173" tween="Cubic" />
					<effect type="Fade" time="200" start="100" end="0" tween="Cubic" />
				</animation>
			</control>
		</control>
	</include>

<!--fullscreen layout-->
	<include name="view_GalleryFull">																													
		<control type="wraplist" id="531">
			<viewtype label="31111">biginfo</viewtype>
			<include>screen_Dimensions</include>
			<onleft>531</onleft>
			<onright>531</onright>
			<onup>6000</onup>
			<ondown>71</ondown>
			<preloaditems>2</preloaditems>
			<pagecontrol>71</pagecontrol>
			<include>toggle_Menu</include>
			<include>global_Scrolltime</include>
			<orientation>horizontal</orientation>
			<include>transition_Content</include>
			<include>transition_Info</include>
			<visible>Container.Content(movies) | Container.Content(tvshows)</visible>
			<itemlayout width="screen_Width" height="screen_Height">
				<include name="GalleryLayoutCommons">
					<param name="ArtWidth" value="screen_Width"/>
					<param name="ArtHeight" value="screen_Height"/>
					<param name="IconSize" value="96"/>
					<param name="StatusSize" value="28" />
					<param name="ShowLogo" value="false" />
				</include>
			</itemlayout>
			<focusedlayout height="screen_Height" width="screen_Width">
				<include name="GalleryLayoutCommons">
					<param name="ArtWidth" value="screen_Width"/>
					<param name="ArtHeight" value="screen_Height"/>
					<param name="IconSize" value="96"/>
					<param name="StatusSize" value="28" />
					<param name="ShowLogo" value="false" />
				</include>
			</focusedlayout>
		</control>

		<control type="group">
			<include>toggle_Menu</include>
			<include>fadeinout</include>
			<include>transition_Info</include>
			<visible>[[Control.IsVisible(53) + Control.HasFocus(8000)] | Control.IsVisible(531)] + !Window.IsActive(Pictures) + !IsEmpty(ListItem.Title)</visible>
			<control type="image">
				<texture>overlays/vignette_bottom.png</texture>
				<include>screen_Dimensions</include>
				<aspectratio>stretch</aspectratio>
				<include>fadeinout</include>
				<!--<visible>Control.IsVisible(53) + Control.HasFocus(8000)</visible>-->
			</control>
			<control type="group">
				<left>40</left>
				<top>540</top>
				<animation effect="slide" start="0,495" end="0,0" easing="Out" tween="Quadratic" time="350">Visible</animation>
				<animation effect="slide" start="0,0" end="0,495" easing="Out" tween="Quadratic" time="350">Hidden</animation>
				<control type="label">
					<width>1200</width>
					<label>$VAR[media:Title]</label>
					<include>osd_Title</include>
				</control>
				<control type="label">
					<top>25</top>		
					<width>1200</width>
					<label>$VAR[media:Info]</label>
					<include>osd_Sub</include>
				</control>
				<control type="image">
					<right>40</right>
					<include>flag_Studio</include>
				</control>
				<control type="textbox">
					<top>55</top>
					<width>1200</width>
					<height>80</height>
					<label>$VAR[media:Plot]</label>
					<font>condensed-U</font>
					<textcolor>Color3</textcolor>
					<visible>!SubString(ListItem.Icon,default)</visible>
				</control>
			</control>
		</control>
	</include>
</includes>