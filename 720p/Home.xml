<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9110</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<onload>CancelAlarm(StartupCheck,true)</onload>

	<controls>
		<control type="group">
			<include>transition_Home</include>
			<include>home_Background</include>
			<include>home_Menu</include>
			<include>home_NowPlaying</include>

		<!--clock-->
			<control type="group">
				<visible>Skin.HasSetting(home.time) + ![Control.HasFocus(9130) | Control.HasFocus(9140) | Window.IsActive(infodialog) | Window.IsActive(extendedprogressdialog)]</visible>
				<include>clock</include>
			</control>

		<!--RSS-->
			<control type="group">
				<left>340</left>
				<top>690</top>
				<include>toggle_RSS</include>
				<visible>System.GetBool(lookandfeel.enablerssfeeds) + ![Control.HasFocus(9120) | Control.HasFocus(9130) | Control.HasFocus(9140) | [Player.HasVideo + Skin.HasSetting(home.nowplaying)]]</visible>
				<control type="image">
					<width>1280</width>
					<height>30</height>
					<texture>overlays/semitrans.png</texture>
				</control>
				<control type="rss">
					<width>940</width>
					<font>condensed-U</font>
					<urlset>1</urlset>
					<height>30</height>
					<textcolor>Color1</textcolor>
					<titlecolor>Color2</titlecolor>
					<headlinecolor>Color1</headlinecolor>
					<highlightcolor>Focused</highlightcolor>
					<include>fadeinout</include>
				</control>
			</control>
		</control>

	<!--home submenu triggers-->
		<!--videos-->
		<control type="button" id="1111">
			<onfocus>Skin.SetString(sub,$LOCALIZE[3])</onfocus>
			<onfocus>SetFocus(203)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--movies-->
		<control type="button" id="2222">
			<onfocus>Skin.SetString(sub,$LOCALIZE[342])</onfocus>
			<onfocus>SetFocus(22)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--tv shows-->
		<control type="button" id="3333">
			<onfocus>Skin.SetString(sub,$LOCALIZE[20343])</onfocus>
			<onfocus>SetFocus(42)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--pvr-->
		<control type="button" id="4444">
			<onfocus>Skin.SetString(sub,$LOCALIZE[31113])</onfocus>
			<onfocus>SetFocus(62)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--music-->
		<control type="button" id="5555">
			<onfocus>Skin.SetString(sub,$LOCALIZE[2])</onfocus>
			<onfocus>SetFocus(82)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--pictures-->
		<control type="button" id="6666">
			<onfocus>Skin.SetString(sub,$LOCALIZE[1])</onfocus>
			<onfocus>SetFocus(102)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--add-ons-->
		<control type="button" id="7777">
			<onfocus>Skin.SetString(sub,$LOCALIZE[24001])</onfocus>
			<onfocus>SetFocus(122)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--system-->
		<control type="button" id="8888">
			<onfocus>Skin.SetString(sub,$LOCALIZE[13000])</onfocus>
			<onfocus>SetFocus(142)</onfocus>
			<include>TriggerButton</include>
		</control>
		<!--disc-->
		<control type="button" id="9999">
			<onfocus>Skin.SetString(sub,$LOCALIZE[427])</onfocus>
			<onfocus>SetFocus(162)</onfocus>
			<include>TriggerButton</include>
		</control>
	</controls>
</window>