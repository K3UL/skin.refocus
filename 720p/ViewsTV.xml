	<include name="view_TV-Status">
		<param name="Left"/>
		<param name="Top" default="7"/>
		<param name="ColorDiffuse" default="Color1"/>
		<param name="Size" default="28"/>
		<definition>
			<control type="group">
				<left>$PARAM[Left]</left>
				<top>$PARAM[Top]</top>
				<visible>!IsEmpty(ListItem.StartTime)</visible>
				<control type="image">
					<width>$PARAM[Size]</width>
					<height>$PARAM[Size]</height>
					<texture>pvr/status/none-nf.png</texture>
					<colordiffuse>$PARAM[ColorDiffuse]</colordiffuse>
					<!--!enabled +!recording active-->
					<visible>!StringCompare(ListItem.Comment,$LOCALIZE[305]) + !StringCompare(ListItem.Comment,$LOCALIZE[19162])</visible>
				</control>
				<control type="image">
					<width>$PARAM[Size]</width>
					<height>$PARAM[Size]</height>
					<texture>pvr/status/none-nf.png</texture>
