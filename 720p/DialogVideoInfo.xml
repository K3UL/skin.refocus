			<control type="list" id="5070">
				<content>plugin://script.extendedinfo?info=youtubesearch&amp;&amp;id=$INFO[ListItem.Title]</content>
			</control>

			<include>screen_Dimensions</include>	

			<!--background-->
			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">$VAR[art:Container]</texture>
				<aspectratio>scale</aspectratio>
				<animation type="WindowOpen">
					<effect type="Fade" time="transition_Open" start="0" end="100" />
				</animation>			
				<animation type="WindowClose">
					<effect type="Fade" time="transition_Close" start="100" end="0" />
				</animation>
			</control>

			<control type="group">
				<include>screen_Dimensions</include>
				<include>transition_Content</include>
				<!--main container-->
				<control type="grouplist" id="4000">
					<include>screen_Dimensions</include>
					<onright>70</onright>
					<pagecontrol>70</pagecontrol>
					<include>global_Scrolltime</include>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<!--upper-->
					<control type="group">
						<width>100%</width>
						<height>250</height>
						<control type="image">
							<width>100%</width>
							<height>200</height>
							<texture aligny="bottom">overlays/vignette_bottom.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<!--studio logo-->
						<control type="image">
							<right>60</right>
							<bottom>40</bottom>
							<width>96</width>
							<height>48</height>
							<aspectratio align="right">keep</aspectratio>
							<colordiffuse>flag_1</colordiffuse>
							<texture>$VAR[flag:Studio]</texture>
							<visible>!Container.Content(movies)</visible>
						</control>
						<control type="image">
							<right>60</right>
							<bottom>40</bottom>
							<width>128</width>
							<height>64</height>
							<aspectratio align="right">keep</aspectratio>
							<colordiffuse>flag_1</colordiffuse>
							<texture>$VAR[flag:Studio]</texture>
							<visible>Container.Content(movies)</visible>
						</control>
						<control type="group">
							<left>60</left>
							<top>110</top>
							<control type="label">
								<width min="0" max="1164">auto</width>
								<label>$INFO[ListItem.Title]</label>
								<selectedcolor>Color1</selectedcolor>
								<include>osd_Title</include>
							</control>
							<control type="label">
								<top>28</top>
								<width>1164</width>
								<label>$VAR[information:Header]</label>
								<font>regular_Small-U</font>
								<include>osd_Sub</include>
							</control>
							<control type="label">
								<top>50</top>
								<width min="0" max="1164">auto</width>
								<label>$VAR[information:Sub]</label>
								<font>regular_Smaller-U</font>
								<textcolor>Color3</textcolor>
								<include>osd_Sub</include>
							</control>
						</control>
						<control type="group">
							<width>100%</width>
							<height>50</height>
							<control type="image">
								<top>200</top>	
								<width>100%</width>
								<height>5000</height>	
								<aspectratio>stretch</aspectratio>
								<texture background="true">overlays/base_color.png</texture>
								<colordiffuse>base_1</colordiffuse>
							</control>
							<control type="grouplist" id="5000">
								<left>60</left>
								<top>220</top>
								<width>100%</width>
								<itemgap>10</itemgap>
								<orientation>horizontal</orientation>
								<defaultcontrol always="true">8</defaultcontrol>
								<!--play / browse-->
								<control type="togglebutton" id="5001">
									<label>$LOCALIZE[208]</label>
									<ondown>399</ondown>
									<onclick>SendClick(8)</onclick>
									<include>global_Button</include>
									<altlabel>$LOCALIZE[1024]</altlabel>
									<usealttexture>Container.Content(TVShows)</usealttexture>
								</control>
								<!--cast-->
								<control type="button" id="5">
									<label>$LOCALIZE[206]</label>
									<ondown>399</ondown>
									<include>global_Button</include>
								</control>
								<!--cinema-->
								<control type="button" id="5003">
									<label>Cinema</label>
									<ondown>399</ondown>
									<onclick>Dialog.Close(movieinformation)</onclick>
									<onclick>Playlist.Clear</onclick>
									<onclick>XBMC.RunScript(script.cinema.experience,movieid=$INFO[ListItem.DBID])</onclick>
									<include>global_Button</include>
									<visible>Container.Content(movies) + System.HasAddon(script.cinema.experience) + !SubString(ListItem.Path,plugin://)</visible>
								</control>
								<!--explore
								<control type="button" id="5003">
									<label>Test</label>
									<onclick>SetProperty(Dialog.1.BuiltIn,BUILTIN)</onclick>
									<onclick>SetProperty(Dialog.2.Label,SOME TEXT)</onclick>
									<onclick>SetProperty(Dialog.2.BuiltIn,BUILTIN)</onclick>
									<onclick>SetProperty(Dialog.3.Label,SOME TEXT)</onclick>
									<onclick>SetProperty(Dialog.3.BuiltIn,BUILTIN)</onclick>
									<onclick>RunScript(script.toolbox,info=selectdialog,header=SOME_TEXT)</onclick>
									<ondown>399</ondown>
									<include>global_Button</include>
								</control>
								-->
								<control type="button" id="5004">
									<label>Explore...</label>
									<onclick>ActivateWindow(1160)</onclick>
									<ondown>399</ondown>
									<include>global_Button</include>
								</control>
								<!--manage-->
								<control type="button" id="5005">
									<label>$LOCALIZE[16106]</label>
									<onclick>ActivateWindow(1120)</onclick>
									<ondown>399</ondown>
									<include>global_Button</include>
									<visible>!SubString(Container.FolderPath,plugin://) + !Skin.HasSetting(global.kiosk)</visible>
								</control>
							</control>
						</control>
					</control>
					<!--
					<control type="group">
						<width>100%</width>
						<height>50</height>
						<control type="button" id="399">
							<label>Plot</label>
							<onup>5000</onup>
							<ondown>50</ondown>
							<onclick>SetProperty(Description,[B]$INFO[ListItem.TagLine,,[/B][CR]]$ESCINFO[ListItem.Plot],Home)</onclick>
							<onclick>RunScript(script.toolbox,info=textviewer,header=$LOCALIZE[20037],text='$ESCINFO[Window(Home).Property(Description)]')</onclick>
							<include>TriggerButton</include>
						</control>
					</control>
				-->


				
				</control>

				<!--plot-->
				<control type="group">
					<top>285</top>
					<visible>!Control.IsVisible(50)</visible>

					<control type="grouplist">
						<itemgap>0</itemgap>
						<orientation>vertical</orientation>
						<control type="textbox" id="400">
							<width>1164</width>
							<height min="0" max="180">auto</height>
							<label>$INFO[ListItem.Director,$LOCALIZE[20339] [B],[/B][CR]]$INFO[ListItem.Writer,$LOCALIZE[20417] [B],[/B][CR]]$INFO[ListItem.UserRating,$LOCALIZE[38018] [B],[/B][CR]]$VAR[information:Cast,$LOCALIZE[206] [B],[/B]]</label>
							<font>regular-U</font>
							<include>detail_Text</include>
							<animation effect="slide" end="60" time="0" condition="true">Conditional</animation>
							<visible>Container.Content(movies) | Container.Content(episodes)</visible>
						</control>
						<control type="textbox" id="401">
							<width>1164</width>
							<height min="0" max="500">auto</height>
							<label>[CR]$INFO[ListItem.Plot]</label>
							<include>detail_Text</include>
							<animation effect="slide" end="60" time="0" condition="true">Conditional</animation>
						</control>
					</control>


					<!--media flags-->
					<control type="group">
						<height>90</height>
						<bottom>20</bottom>
						<control type="group">
							<left>60</left>
							<top>40</top>
							<include>detail_Flags</include>
							<control type="label">
								<top>25</top>
								<height>20</height>
								<label>$INFO[ListItem.Path]</label>
								<font>regular_Smaller-U</font>
								<textcolor>Color3</textcolor>
							</control>
						</control>
					</control>

				</control>

				<!--cast-->
				<control type="group">
					<top>265</top>
					<height>390</height>
					<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)] + IntegerGreaterThan(Container(50).NumItems,0)</visible>
					<control type="panel" id="50">
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>399</onup>
						<ondown>5011</ondown>
						<pagecontrol>501</pagecontrol>
						<orientation>horizontal</orientation>
						<include>infodialog_ContainerCommons</include>
						<itemlayout width="194" height="350">
							<include>infodialog_Portrait-LayoutCommons</include>
							<control type="textbox">
								<label>[B]$INFO[ListItem.Label][/B]$INFO[ListItem.Label2, [COLOR=Color3][CR],[/COLOR]]</label>
								<include>infodialog_Portrait-Label</include>
							</control>
						</itemlayout>
						<focusedlayout width="194" height="350">
							<control type="image">
								<width>184</width>
								<height>266</height>
								<include>art_Frame-fo</include>
							</control>
							<include>infodialog_Portrait-LayoutCommons</include>
							<control type="textbox">
								<label>[B]$INFO[ListItem.Label][/B]$INFO[ListItem.Label2, [COLOR=Color3][CR],[/COLOR]]</label>
								<include>infodialog_Portrait-Label</include>
							</control>
						</focusedlayout>
					</control>
				</control>
			</control>
			<!--pagecontrol-->
			<control type="scrollbar" id="70">
				<top>0</top>
				<left>1272</left>
