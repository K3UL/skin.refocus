<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">5000</defaultcontrol>
	<controls>
		<control type="group">
			<include>screen_Dimensions</include>	
			<!--background-->
			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">$VAR[art:Container]</texture>
				<aspectratio>scale</aspectratio>
				<animation type="WindowOpen">
					<effect type="Fade" time="transition_Open" start="0" end="100" />
				</animation>			
				<animation type="WindowClose">
					<effect type="Fade" time="transition_Close" start="100" end="0" />
				</animation>
			</control>
			<control type="group">
				<include>screen_Dimensions</include>
				<include>transition_Content</include>
				<!--main container-->
				<control type="grouplist" id="4000">
					<include>screen_Dimensions</include>
					<onright>70</onright>
					<pagecontrol>70</pagecontrol>
					<include>global_Scrolltime</include>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<!--banner window-->
					<control type="group">
						<width>100%</width>
						<height>250</height>
						<control type="image">
							<width>100%</width>
							<height>200</height>
							<texture aligny="bottom">overlays/vignette_bottom.png</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<!--studio / network logos-->
						<control type="image">
							<right>40</right>
							<bottom>60</bottom>
							<width>96</width>
							<height>48</height>
							<aspectratio align="right">keep</aspectratio>
							<colordiffuse>flag_1</colordiffuse>
							<texture>$VAR[flag:Label]</texture>
						</control>
						<!--begin main column-->
						<control type="group">
							<left>300</left>
							<top>110</top>
							<control type="label">
								<width min="0" max="1164">auto</width>
								<label>$VAR[information:Title]</label>
								<selectedcolor>Color1</selectedcolor>
								<include>osd_Title</include>
							</control>
							<control type="label">
								<top>28</top>
								<width>1164</width>
								<label>$VAR[information:Header]</label>
								<font>regular_Small-U</font>
								<include>osd_Sub</include>
							</control>
							<control type="label">
								<top>50</top>
								<width min="0" max="1164">auto</width>
								<label>$VAR[information:Sub]</label>
								<font>regular_Smaller-U</font>
								<textcolor>Color3</textcolor>
								<include>osd_Sub</include>
							</control>
						</control>

						<control type="group">
							<width>100%</width>
							<height>screen_Height</height>
							<control type="image">
								<top>200</top>	
								<width>100%</width>
								<height>5000</height>	
								<aspectratio>stretch</aspectratio>
								<texture background="true">overlays/base_color.png</texture>
								<colordiffuse>base_1</colordiffuse>
							</control>
							<!--main content area-->
							<control type="group">
								<left>300</left>
								<top>220</top>
								<control type="grouplist" id="5000">
									<width>100%</width>
									<height>40</height>
									<itemgap>10</itemgap>
									<orientation>horizontal</orientation>
									<defaultcontrol always="true">8</defaultcontrol>
									<!--play / browse-->
									<control type="button" id="8">
										<label>$LOCALIZE[1024]</label>
										<onclick>Close</onclick>
										<ondown>50</ondown>
										<width min="120" max="200">auto</width>
										<include>global_Button</include>
									</control>
									<!--tracks-->
									<control type="button" id="5">
										<label>$LOCALIZE[182]</label>
										<ondown>50</ondown>
										<width min="120" max="200">auto</width>
										<include>global_Button</include>
									</control>
									<!--explore-->
									<control type="button" id="5004">
										<label>$LOCALIZE[31506]</label>
										<onclick>ActivateWindow(1160)</onclick>
										<ondown>50</ondown>
										<width min="120" max="200">auto</width>
										<include>global_Button</include>
									</control>
									<!--manage-->
									<control type="button" id="5005">
										<label>$LOCALIZE[16106]</label>
										<onclick>ActivateWindow(1120)</onclick>
										<ondown>50</ondown>
										<width min="120" max="200">auto</width>
										<include>global_Button</include>
										<visible>!SubString(Container.FolderPath,plugin://) + !Skin.HasSetting(global.kiosk)</visible>
									</control>
								</control>
								<!--plot / descriptions-->
								<control type="textbox" id="401">
									<top>70</top>
									<width>875</width>
									<height min="0" max="325">auto</height>
									<label>$VAR[media:Plot]</label>
									<include>detail_Text</include>
								</control>
							</control>
							<!--media flags-->
							<control type="group">
								<left>300</left>
								<bottom>40</bottom>
								<height>40</height>
								<include>detail_Flags</include>
								<control type="label">
									<top>25</top>
									<height>20</height>
									<label>$INFO[ListItem.Path]</label>
									<font>regular_Smaller-U</font>
									<textcolor>Color3</textcolor>
								</control>
							</control>
						</control>

						<!--left column-->
						<control type="group">
							<left>40</left>
							<top>40</top>
							<control type="image">
								<width>207</width>
								<height>207</height>
								<include>art_Frame-nf</include>
							</control>
							<control type="group">
								<left>7</left>
								<top>7</top>
								<control type="image">	
									<width>193</width>
									<height>193</height>
									<texture background="true">thumbs/default_Portrait.png</texture>
									<aspectratio>stretch</aspectratio>
								</control>
								<control type="image">
									<width>193</width>
									<height>193</height>
									<texture background="true">$VAR[art:Square]</texture>
									<aspectratio align="center" aligny="top">scale</aspectratio>
								</control>
							</control>
							<control type="textbox" id="401">
								<top>227</top>
								<width>200</width>
								<height min="0" max="300">auto</height>
								<align>right</align>
								<label>$INFO[Container(50).NumItems,[B]$LOCALIZE[132][/B][CR],[CR][CR]]$INFO[ListItem.Property(Artist_YearsActive),[B]$LOCALIZE[21898][/B][CR],[CR][CR]]$INFO[$INFO[ListItem.Property(Artist_Mood),[B]$LOCALIZE[175][/B][CR],[CR]]$INFO[$INFO[ListItem.Property(Artist_Style),[B]$LOCALIZE[176][/B][CR],[CR]]$INFO[ListItem.Property(Instruments),[B]$LOCALIZE[21892][/B][CR],[CR]]</label>
								<include>detail_Text</include>
								<visible>Container.Content(artists)</visible>
							</control>
							<control type="textbox" id="402">
								<top>227</top>
								<width>200</width>
								<height min="0" max="300">auto</height>
								<align>right</align>
								<label>$INFO[ListItem.Property(Album_Mood),[B]$LOCALIZE[175][/B][CR],[CR][CR]]$INFO[ListItem.Property(Album_Style),[B]$LOCALIZE[176][/B][CR],[CR][CR]]$INFO[ListItem.Property(Album_Theme),[B]$LOCALIZE[21895][/B][CR],[CR][CR]]$INFO[ListItem.Property(Album_Type),[B]$LOCALIZE[146][/B][CR],[CR][CR]]$INFO[ListItem.Property(Album_Label),[B]$LOCALIZE[21899][/B][CR],[CR][CR]]</label>
								<include>detail_Text</include>
								<visible>Container.Content(albums)</visible>
							</control>
						</control>
					</control>		
				</control>

				<!--discography / tracks-->
				<control type="group">
					<left>300</left>
					<top>290</top>
					<height>390</height>
					<visible>IntegerGreaterThan(Container(50).NumItems,0)</visible>
					<control type="panel" id="50">
						<onleft>50</onleft>
						<onright>50</onright>
						<onup>399</onup>
						<ondown>5011</ondown>
						<pagecontrol>501</pagecontrol>
						<orientation>horizontal</orientation>
						<itemlayout width="188" height="188">
							<include name="IconLayoutCommons">
								<param name="FrameState" value="frames/frame-nf.png" />
								<param name="FrameWidth" value="178"/>
								<param name="FrameHeight" value="178"/>
								<param name="ArtWidth" value="164"/>
								<param name="ArtHeight" value="164"/>
								<param name="IconSize" value="34"/>
							</include>
						</itemlayout>
						<focusedlayout width="188" height="188">
							<include name="IconLayoutCommons">
								<param name="FrameState" value="frames/frame-fo.png" />
								<param name="FrameWidth" value="178"/>
								<param name="FrameHeight" value="178"/>
								<param name="ArtWidth" value="164"/>
								<param name="ArtHeight" value="164"/>
								<param name="IconSize" value="34"/>
							</include>
						</focusedlayout>
					</control>
				</control>
			</control>

			<!--pagecontrol-->
			<control type="scrollbar" id="70">
				<top>0</top>
				<left>1272</left>
				<width>8</width>
				<height>720</height>
				<onleft>4000</onleft>
				<texturesliderbar>views/pagecontrol/grip-fo.png</texturesliderbar>
			</control>
		</control>
	</controls>
</window>