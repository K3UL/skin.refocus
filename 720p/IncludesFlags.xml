<includes>

<!--- STUDIO ---------------------------------------->
	<include name="flag_Studio">
		<texture>$INFO[Listitem.studio,flags/studios/,.png]</texture>
		<width>128</width>
		<height>64</height>
	</include>
	<include name="flag_Studio-play">
		<texture fallback="flags/default.png">$INFO[VideoPlayer.studio,flags/studios/,.png]</texture>
	</include>
	<include name="flag_Studio-mono-play">
		<texture fallback="flags/default.png">$INFO[VideoPlayer.studio,flags/studios/,.png]</texture>
		<width>128</width>
		<height>64</height>
		<colordiffuse>Color4</colordiffuse>
	</include>

<!--- NETWORK ---------------------------------------->	
	<include name="flag_Network">
		<texture>$INFO[Listitem.studio,flags/networks/,.png]</texture>
		<width>128</width>
		<height>64</height>
		<visible>!IsEmpty(ListItem.Title)</visible>
	</include>
	<include name="flag_Network-mono">
		<texture>$INFO[Listitem.studio,flags/networks/mono/,.png]</texture>
		<width>128</width>
		<height>64</height>
		<visible>!IsEmpty(ListItem.Title)</visible>
	</include>
	<include name="flag_Network-play">
		<texture fallback="flags/default.png">$INFO[VideoPlayer.studio,flags/networks/,.png]</texture>
	</include>
	<include name="flag_Network-mono-play">
		<texture fallback="flags/default.png">$INFO[VideoPlayer.studio,flags/networks/mono/,.png]</texture>
	</include>

<!--- PVR ---------------------------------------->
	<include name="flag_Channel">
		<texture>$INFO[Listitem.ChannelName,flags/networks/,.png]</texture>
		<aspectratio align="right">keep</aspectratio>
		<width>128</width>
		<height>64</height>
	</include>
	<include name="flag_Channel-play">
		<texture fallback="flags/networks/default.png">$INFO[VideoPlayer.ChannelName,flags/networks/,.png]</texture>
	</include>
	<include name="flag_Channel-mono-play">
		<texture fallback="flags/networks/default.png">$INFO[VideoPlayer.ChannelName,flags/mono/networks/,.png]</texture>
	</include>
	<include name="flags_PVR">
		<control type="image">
			<width>128</width>
			<height>64</height>
			<aspectratio align="right">keep</aspectratio>
			<include>flag_Channel</include>
		</control>
		<control type="image">
			<width>128</width>
			<height>64</height>
			<aspectratio align="right">keep</aspectratio>
			<texture>$INFO[Listitem.Icon]</texture>
			<visible>stringcompare(Listitem.ChannelName,flags/networks/,.png)</visible>
		</control>
	</include>

<!--- HD ---------------------------------------->
	<include name="flag_HD">
		<texture>views/HD.png</texture>
		<visible>stringcompare(Listitem.VideoResolution,720) | stringcompare(Listitem.VideoResolution,1080)</visible>
	</include>
	<include name="flag_HD-play">
		<texture>flags/type/HD.png</texture>
		<visible>stringcompare(VideoPlayer.VideoResolution,720) | stringcompare(VideoPlayer.VideoResolution,1080)</visible>
	</include>
	
<!--- CODEC / TYPE---------------------------------------->	
	<include name="flag_VideoCodec-play">
		<texture fallback="flags/networks/default.png">$INFO[VideoPlayer.VideoCodec,flags/type/,.png]</texture>
	</include>
	<include name="flags_Type-info">
		<control type="grouplist" id="100">
			<width>900</width>
			<height>64</height>
			<itemgap>15</itemgap>
			<orientation>horizontal</orientation>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.VideoResolution,flags/video/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>[Container.Content(movies) | Container.Content(episodes) | Container.Content(musicvideos)] + !IsEmpty(Listitem.VideoResolution)</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.VideoCodec,flags/codec/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>[Container.Content(movies) | Container.Content(episodes) | Container.Content(musicvideos)] + !IsEmpty(Listitem.VideoCodec)</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.AudioCodec,flags/codec/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>[Container.Content(movies) | Container.Content(episodes) | Container.Content(musicvideos)] + !IsEmpty(Listitem.AudioCodec)</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.VideoAspect,flags/video/aspectratio/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>[Container.Content(movies) | Container.Content(episodes) | Container.Content(musicvideos)] + !IsEmpty(Listitem.VideoAspect)</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.studio,flags/studios/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(movies)</visible>
			</control>
			<control type="image">
				<width>128</width>
				<height>72</height>
				<texture>$INFO[Listitem.studio,flags/networks/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(tvshows)</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.studio,flags/networks/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(episodes)</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>64</height>
				<texture>$INFO[Listitem.studio,flags/labels/,.png]</texture>
				<aspectratio align="center">keep</aspectratio>
			</control>
		</control>
	</include>

<!--- RES ---------------------------------------->
	<include name="flag_Res">
		<texture>$INFO[Listitem.VideoResolution,flags/video/,.png]</texture>
		<visible>!IsEmpty(Listitem.AudioChannels)</visible>
	</include>
	<include name="flag_Res-Mono">
		<texture>$INFO[Listitem.VideoResolution,flags/video/mono/,.png]</texture>
		<colordiffuse>Color4</colordiffuse>
	</include>
	<include name="flag_Res-play">
		<texture>$INFO[Listitem.VideoResolution,flags/video/mono/,.png]</texture>
		<colordiffuse>Color4</colordiffuse>
	</include>
	<include name="flag_Res-Mono-play">
		<texture>$INFO[Listitem.VideoResolution,flags/video/mono/,.png]</texture>
		<colordiffuse>Color4</colordiffuse>
	</include>

<!--- RES ---------------------------------------->
	<include name="flag_Audio">
		<texture>$INFO[Listitem.AudioChannels,flags/audio/,.png]</texture>
		<visible>!IsEmpty(Listitem.AudioChannels)</visible>
	</include>

<!--- LABEL ---------------------------------------->
	<include name="flag_Label">
			<texture>$INFO[Listitem.Property(Album_Label),flags/labels/,.png]</texture>
	</include>
	<include name="flag_Label-play">
		<texture>$INFO[VideoPlayer.studio,flags/studios/,.png]</texture>
		<colordiffuse>Color1</colordiffuse>
	</include>
	<include name="flags_Label-info">
		<control type="grouplist" id="100">
			<itemgap>20</itemgap>
			<orientation>vertical</orientation>
			<control type="image">
				<width>128</width>
				<height>72</height>
				<aspectratio align="center">keep</aspectratio>
				<colordiffuse>Color1</colordiffuse>
				<texture>$INFO[Listitem.Property(Album_Label),flags/labels/,.png]</texture>
				<visible>!IsEmpty(Listitem.Property(Album_Label))</visible>
			</control>
			<control type="image">
				<width>128</width>
				<height>32</height>
				<info>ListItem.StarRating</info>
				<colordiffuse>Color7</colordiffuse>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(albums)</visible>
			</control>
		</control>
	</include>

<!--- GROUPS ---------------------------------------->
	<include name="flags52">
		<control type="grouplist">
			<width>900</width>
			<height>64</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<visible>[Control.IsVisible(52) | Control.IsVisible(521) | Control.IsVisible(58)] + !IsEmpty(ListItem.Title)</visible>
			<control type="image">
				<width>128</width>
				<height>32</height>
				<info>ListItem.StarRating</info>
				<aspectratio align="center">keep</aspectratio>
				<visible>![Window.IsVisible(VideoFiles) | Container.Content(seasons) | Container.Content(musicvideos) | [ListItem.IsFolder + !Container.Content(tvshows)]] + IsEmpty(ListItem.Property(ReleaseDate))</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>34</height>
				<aspectratio align="center">keep</aspectratio>
				<include>flag_Res</include>
				<visible>!Container.Content(tvshows) + IsEmpty(ListItem.Property(ReleaseDate)) + !ListItem.IsFolder</visible>
			</control>
			<control type="image">
				<width>53</width>
				<height>34</height>
				<aspectratio align="center">keep</aspectratio>
				<include>flag_Audio</include>
				<visible>!Container.Content(tvshows) + IsEmpty(ListItem.Property(ReleaseDate)) + !ListItem.IsFolder</visible>
			</control>
		</control>
	</include>
</includes>