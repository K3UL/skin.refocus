<!--- LABEL ---------------------------------------->
	<include name="flag_Label">
			<texture fallback="-flags/default.png">$INFO[Listitem.Property(Album_Label),flags/labels/,.png]</texture>
	</include>
	<include name="flag_Label-play">
		<texture fallback="flags/default.png">$INFO[VideoPlayer.studio,flags/studios/,.png]</texture>
		<colordiffuse>Color1</colordiffuse>
	</include>
	<include name="flags_Label-info">
		<control type="grouplist" id="100">
			<itemgap>20</itemgap>
			<orientation>vertical</orientation>
			<control type="image">
				<width>128</width>
				<height>72</height>
				<aspectratio align="center">keep</aspectratio>
				<colordiffuse>Color1</colordiffuse>
				<texture>$INFO[Listitem.Property(Album_Label),flags/labels/,.png]</texture>
				<visible>!IsEmpty(Listitem.Property(Album_Label))</visible>
			</control>
			<control type="image">
				<width>128</width>
				<height>32</height>
				<info>ListItem.StarRating</info>
				<colordiffuse>Color7</colordiffuse>
				<aspectratio align="center">keep</aspectratio>
				<visible>Container.Content(albums)</visible>
			</control>
		</control>
	</include>

<!--- GROUPS ---------------------------------------->
	<include name="flags52">
		<control type="grouplist">
			<width>900</width>
			<height>64</height>
			<itemgap>10</itemgap>
			<orientation>horizontal</orientation>
			<visible>[Control.IsVisible(52) | Control.IsVisible(521) | Control.IsVisible(58)] + !IsEmpty(ListItem.Title)</visible>
			<control type="image">
				<width>128</width>
				<height>32</height>
				<info>ListItem.StarRating</info>
				<aspectratio align="center">keep</aspectratio>
				<visible>![Window.IsVisible(VideoFiles) | Container.Content(seasons) | Container.Content(musicvideos) | [ListItem.IsFolder + !Container.Content(tvshows)]] + IsEmpty(ListItem.Property(ReleaseDate))</visible>
			</control>
			<control type="image">
				<width>96</width>
				<height>34</height>
				<aspectratio align="center">keep</aspectratio>
				<include>flag_Res</include>
				<visible>!Container.Content(tvshows) + IsEmpty(ListItem.Property(ReleaseDate)) + !ListItem.IsFolder</visible>
			</control>
		</control>
	</include>
	
	
