<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">5000</defaultcontrol>
	<controls>
		<control type="group">
			<include>screen_Dimensions</include>

			<!--background-->
			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">$VAR[art:Container]</texture>
				<aspectratio>scale</aspectratio>
				<animation type="WindowOpen">
					<effect type="Fade" time="transition_Open" start="0" end="100" />
				</animation>			
				<animation type="WindowClose">
					<effect type="Fade" time="transition_Close" start="100" end="0" />
				</animation>
			</control>

			<control type="image">
				<include>screen_Dimensions</include>
				<texture background="true">overlays/base_color.png</texture>
				<colordiffuse>base_1</colordiffuse>
				<visible>IsEmpty(ListItem.Art(fanart))</visible>
			</control>

			<control type="group">
				<include>screen_Dimensions</include>
				<include>transition_Content</include>
				<!--main container-->
				<control type="grouplist" id="4000">
					<include>screen_Dimensions</include>
					<onright>70</onright>
					<pagecontrol>70</pagecontrol>
					<include>global_Scrolltime</include>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<!--banner window-->
					<control type="group">
						<width>100%</width>
						<height>250</height>
						<control type="image">
							<width>100%</width>
							<height>200</height>
							<texture aligny="bottom">overlays/vignette_bottom.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>!IsEmpty(ListItem.Art(fanart))</visible>
						</control>
						<!--begin main column-->
						<control type="group">
							<left>300</left>
							<top>110</top>
							<control type="label">
								<width min="0" max="1164">auto</width>
								<label>$INFO[ListItem.Property(Addon.Name)]</label>
								<selectedcolor>Color1</selectedcolor>
								<include>osd_Title</include>
							</control>
							<control type="label">
								<top>28</top>
								<width>1164</width>
								<label>$INFO[ListItem.Property(Addon.Summary)]</label>
								<font>regular_Small-U</font>
								<include>osd_Sub</include>
							</control>
							<control type="label">
								<top>50</top>
								<width min="0" max="1164">auto</width>
								<label>$INFO[ListItem.Property(Addon.Creator)]</label>
								<font>regular_Smaller-U</font>
								<textcolor>Color3</textcolor>
								<include>osd_Sub</include>
							</control>
						</control>

						<control type="group">
							<width>100%</width>
							<height>screen_Height</height>
							<control type="image">
								<top>200</top>	
								<width>100%</width>
								<height>520</height>	
								<aspectratio>stretch</aspectratio>
								<texture background="true">overlays/base_color.png</texture>
								<colordiffuse>base_1</colordiffuse>
								<visible>!IsEmpty(ListItem.Art(fanart))</visible>
							</control>
							<!--begin main content area-->
							<control type="group">
								<left>300</left>
								<top>220</top>
								<control type="grouplist" id="5000">
									<width>100%</width>
									<height>40</height>
									<itemgap>10</itemgap>
									<orientation>horizontal</orientation>
									<defaultcontrol always="true">8</defaultcontrol>
									<!--configure-->
									<control type="togglebutton" id="9">
										<label>$LOCALIZE[24020]</label>
										<include>global_Button</include>
										<visible>Control.IsEnabled(9)</visible>
									</control>
									<!--update-->
									<control type="button" id="8">
										<label>$LOCALIZE[24069]</label>
										<include>global_Button</include>
										<visible>Control.IsEnabled(8)</visible>
									</control>
									<!--auto-update-->
									<control type="radiobutton" id="13">
										<width>150</width>
										<label>$LOCALIZE[21340]</label>
										<include>global_Button</include>
										<include>global_Radio</include>
										<visible>Control.IsEnabled(13)</visible>
									</control>
									<!--launch-->
									<control type="button" id="12">
										<label>$LOCALIZE[518]</label>
										<include>global_Button</include>
										<visible>Control.IsEnabled(12)</visible>
									</control>
									<!--uninstall-->
									<control type="button" id="6">
										<label>$LOCALIZE[24022]</label>
										<include>global_Button</include>
										<visible>Control.IsEnabled(6)</visible>
									</control>
									<!--disable-->
									<control type="button" id="7">
										<label>$LOCALIZE[24021]</label>
										<include>global_Button</include>
										<visible>Control.IsEnabled(7)</visible>
									</control>
									<!--changelog-->
									<control type="button" id="10">
										<label>$LOCALIZE[24036]</label>
										<include>global_Button</include>
										<visible>Control.IsEnabled(10)</visible>
									</control>
								</control>
								<!--plot / descriptions-->
								<control type="textbox" id="401">
									<top>70</top>
									<width>875</width>
									<height min="0" max="325">auto</height>
									<label>$INFO[ListItem.Property(Addon.Description,[B]$LOCALIZE[21821][/B][CR],[CR][CR]]$INFO[ListItem.Property(Addon.Disclaimer,[B]$LOCALIZE[24052][/B][CR],[CR][CR]]</label>
									<include>detail_Text</include>
									<visible>!Control.IsVisible(50)</visible>
								</control>
							</control>
						</control>

						<!--begin left column-->
						<control type="group">
							<left>40</left>
							<top>40</top>
							<control type="image">
								<width>207</width>
								<height>207</height>
								<include>art_Frame-nf</include>
							</control>
							<control type="group">
								<left>7</left>
								<top>7</top>
								<control type="image">	
									<width>193</width>
									<height>193</height>
									<texture background="true">thumbs/default_Portrait.png</texture>
									<aspectratio>stretch</aspectratio>
								</control>
								<control type="image">
									<width>193</width>
									<height>193</height>
									<texture>$INFO[ListItem.ActualIcon]</texture>
									<aspectratio align="center" aligny="top">scale</aspectratio>
									<visible>IsEmpty(ListItem.Thumb)</visible>
								</control>
								<control type="image">
									<width>193</width>
									<height>193</height>
									<texture>$INFO[ListItem.Art(thumb)]</texture>
									<aspectratio align="center" aligny="top">scale</aspectratio>
								</control>
							</control>
							<control type="textbox" id="401">
								<top>227</top>
								<width>200</width>
								<height min="0" max="300">auto</height>
								<align>right</align>
								<label>$INFO[ListItem.Property(Addon.Type,[B]$LOCALIZE[467][/B][CR],[CR][CR]]$INFO[ListItem.Property(Addon.Version,[B]$LOCALIZE[19114][/B][CR],[CR][CR]]$INFO[ListItem.Property(Addon.ID,[B]$LOCALIZE[560][/B][CR],[CR][CR]]$INFO[ListItem.Property(Addon.Status,[B]$LOCALIZE[126][/B][CR],[CR][CR]]</label>
								<include>detail_Text</include>
							</control>
						</control>
					</control>		
				</control>

				<!--cast-->
				<control type="panel" id="50">
					<left>300</left>
					<top>300</top>
					<width>980</width>
					<height>390</height>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>5</onup>
					<ondown>noop</ondown>
					<pagecontrol>501</pagecontrol>
					<orientation>horizontal</orientation>
					<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(episodes)] + IntegerGreaterThan(Container(50).NumItems,0)</visible>
					<itemlayout width="229" height="350">
						<include name="IconLayoutCommons">
							<param name="FrameState" value="frames/frame-nf.png" />
							<param name="FrameWidth" value="209"/>
							<param name="FrameHeight" value="310"/>
							<param name="ArtWidth" value="195"/>
							<param name="ArtHeight" value="296"/>
							<param name="IconSize" value="72"/>
						</include>
						<control type="textbox">
							<left>7</left>
							<top>325</top>
							<width>195</width>
							<height min="25" max="48">auto</height>
							<font>condensed_Small</font>
							<align>center</align>
							<aligny>bottom</aligny>
							<textcolor>Color1</textcolor>
							<label>[B]$INFO[ListItem.Label][/B]$INFO[ListItem.Label2, [COLOR=Color3][CR],[/COLOR]]</label>
						</control>
					</itemlayout>
					<focusedlayout width="194" height="350">
						<include name="IconLayoutCommons">
							<param name="FrameState" value="frames/frame-fo.png" />
							<param name="FrameWidth" value="209"/>
							<param name="FrameHeight" value="310"/>
							<param name="ArtWidth" value="195"/>
							<param name="ArtHeight" value="296"/>
							<param name="IconSize" value="72"/>
						</include>
						<control type="textbox">
							<left>7</left>
							<top>325</top>
							<width>195</width>
							<height min="25" max="48">auto</height>
							<font>condensed_Small</font>
							<align>center</align>
							<aligny>bottom</aligny>
							<textcolor>Color1</textcolor>
							<label>[B]$INFO[ListItem.Label][/B]$INFO[ListItem.Label2, [COLOR=Color3][CR],[/COLOR]]</label>
						</control>
					</focusedlayout>
				</control>
			</control>

			<!--pagecontrol-->
			<control type="scrollbar" id="70">
				<top>0</top>
				<left>1272</left>
				<width>8</width>
				<height>720</height>
				<onleft>4000</onleft>
				<texturesliderbar>views/pagecontrol/grip-fo.png</texturesliderbar>
			</control>
		</control>
	</controls>
</window>