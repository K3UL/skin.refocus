<window id="115">
	<defaultcontrol>901</defaultcontrol>
	
	<controls>
		<include>clock</include>
		<control type="group" id="213">
			<visible>Window.IsActive(fullscreenvideo) + ![Window.IsVisible(script-XBMC-Subtitles-main.xml) | Window.IsActive(101) | Window.IsActive(2901)] + [Player.Caching | Player.Seeking | Player.DisplayAfterSeek | Player.Paused | Player.Forwarding | Player.Rewinding]</visible>
			<posy>635</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0,100" end="0,0" tween="Cubic" center="auto" easing="Out" time="400" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0,0" end="0,100" tween="Cubic" center="auto" easing="Out" time="400" />
			</animation>
			<control type="image" id="1">
				<include>screenwidth</include>
				<height>230</height>
				<texture flipy="false">OSD/fullscreenInfo.png</texture>
			</control>
			<control type="progress" id="1">
				<description>Progressbar</description>
				<posx>255</posx>
				<posy>47</posy>
				<width>770</width>
				<height>22</height>
				<info>Player.CacheLevel</info>
				<texturebg border="10">dialogs/cacheBackground.png</texturebg>
				<midtexture border="10.5">dialogs/cacheSlider.png</midtexture>
				<lefttexture>-</lefttexture>
				<righttexture>-</righttexture>
				<overlaytexture>-</overlaytexture>
			</control>
			<control type="progress" id="1">
				<posx>255</posx>
				<posy>47</posy>
				<width>770</width>
				<height>22</height>
				<texturebg border="10">dialogs/progressBackground.png</texturebg>
				<info>Player.Progress</info>
			</control>
			<control type="group" id="901">
				<posx>250</posx>
				<posy>37</posy>
