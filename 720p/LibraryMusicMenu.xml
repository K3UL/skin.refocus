<includes>
	<include name="LibraryMusicMenu">
		<control type="group">
			<visible>!Skin.HasSetting(global.kiosk)</visible>
			<control type="group" id="6000">
				<posx>-275</posx>
				<posy>20</posy>
				<visible allowhiddenfocus="true">ControlGroup(6000).HasFocus(0) + !Skin.HasSetting(global.kiosk)</visible>
				<onright>50</onright>
				<include>pagemenus</include>
				<include>transition_WindowMenu</include>
				<include>toggle_NumItems-menumove</include>
	
				<control type="button" id="1">
					<description>Choose Viewtype</description>
					<label>[UPPERCASE]$LOCALIZE[31930][/UPPERCASE]</label>
					<onleft>1</onleft>
					<onright>50</onright>
					<onup>90</onup>
					<ondown>3</ondown>
					<onclick>SetFocus(40)</onclick>
					<include>button_Menu</include>
					<visible allowhiddenfocus="true">![ControlGroup(40).HasFocus() | ControlGroup(80).HasFocus()]</visible>
				</control>
	
				<control type="grouplist" id="40">
					<onup>40</onup>
					<ondown>40</ondown>
					<onleft>-</onleft>
					<onright>1</onright>
