					<visible allowhiddenfocus="true">ControlGroup(40).HasFocus()</visible>
					<control type="button" id="41">
						<description>list</description>
						<label>$LOCALIZE[535]</label>
						<onleft>1</onleft>
						<onright>1</onright>
						<onup>1</onup>
						<onclick>Container.SetViewMode(50)</onclick>
						<include>button_Menu</include>
					</control>
					<control type="button" id="42">
						<description>slide</description>
						<label>$LOCALIZE[31003]</label>
						<onleft>1</onleft>
						<onright>1</onright>
						<onclick>Container.SetViewMode(52)</onclick>
						<include>button_Menu</include>
						<visible>!Container.Content(artists) + !IsEmpty(container.folderpath) + !substring(container.folderpath,addons://sources/) + !substring(container.folderpath,plugin://)</visible>
					</control>
					<control type="button" id="43">
						<label>$LOCALIZE[31003]</label>
						<onleft>1</onleft>
						<onright>1</onright>
						<onclick>Container.SetViewMode(521)</onclick>
						<include>button_Menu</include>
						<visible>Container.Content(artists)</visible>
					</control>
					<control type="button" id="44">
						<description>thumbnails</description>
						<label>$LOCALIZE[31014]</label>
						<onleft>1</onleft>
						<onright>1</onright>
						<onclick>Container.SetViewMode(572)</onclick>
						<include>button_Menu</include>
						<visible>[Container.Content(albums) | Container.Content(songs)] + !stringcompare(container.folderpath,addons://sources/)</visible>
					</control>
					<control type="button" id="45">
						<description>thumbnails info</description>
						<label>$LOCALIZE[31014]</label>
						<onleft>1</onleft>
						<onright>1</onright>
						<onclick>Container.SetViewMode(574)</onclick>
						<include>button_Menu</include>
						<visible>stringcompare(container.folderpath,addons://sources/audio/) | substring(container.folderpath,plugin://)</visible>
					</control>
					<control type="button" id="46">
						<label>$LOCALIZE[31014]</label>
						<onleft>1</onleft>
						<onright>1</onright>
						<onclick>Container.SetViewMode(573)</onclick>
						<include>button_Menu</include>
						<visible>Container.Content(artists)</visible>
					</control>
				</control>
	
				<control type="button" id="3">
					<description>Sort by button</description>
					<posy>43</posy>
					<label>103</label>
					<onright>50</onright>
					<onup>1</onup>
					<ondown>4</ondown>
					<include>button_Menu</include>
					<visible>![ControlGroup(40).HasFocus() | ControlGroup(80).HasFocus()]</visible>
				</control>
	
