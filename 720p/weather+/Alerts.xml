			<include>transition_Container</include>
			<include>toggle_Menu</include>
			<visible>StringCompare(Window.Property(Weather.CurrentView),alerts)</visible>
			
			<control type="textbox" id="8000">
				<posx>55</posx>
				<posy>100</posy>
				<width>1170</width>
				<height>575</height>
				<font>smallAlt</font>
