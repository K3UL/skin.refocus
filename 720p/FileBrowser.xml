<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
	<defaultcontrol always="true">450</defaultcontrol>
	<include>transition_Dialog</include>
	<coordinates>
		<system>1</system>
		<left>238</left>
		<top>70</top>
	</coordinates>
	<controls>
		<control type="group">
			<width>805</width>
			<height>580</height>

			<include content="dialog_WindowCommons">
				<param name="DialogHeaderID" value="411"/>
				<param name="DialogHeader" value="$LOCALIZE[1023]"/>
				<param name="DialogWidth" value="805"/>
				<param name="DialogHeight" value="580"/>
				<param name="DialogSubHeaderID" value="412"/>
				<param name="DialogSubHeaderPath" value="true" />
			</include>

			<control type="group" id="9002">
				<top>60</top>
				<!--text list-->
				<include content="dialog_Common-List">
					<param name="ID" value="450"/>
					<param name="ContainerTop" value="40"/>
					<param name="ContainerWidth" value="600"/>
					<param name="ContainerHeight" value="440"/>
					<param name="Width" value="715"/>
					<param name="OnUp" value="450"/>
					<param name="OnDown" value="450"/>
					<param name="OnLeft" value="415"/>
					<param name="OnRight" value="9000"/>
					<param name="PageControl" value="60"/>
					<param name="Left" value="60"/>
					<param name="ShowIcon" value="true"/>
				</include>

				<!--thumbnail list-->
				<control type="panel" id="451">
					<left>15</left>
					<top>40</top>
					<width>600</width>
					<height>460</height>
					<onup>451</onup>
					<ondown>451</ondown>
					<onleft>noop</onleft>
					<onright>9000</onright>
					<orientation>vertical</orientation>
					<pagecontrol>60</pagecontrol>
					<preloaditems>4</preloaditems>
					<include>global_ListScroll</include>
					<itemlayout width="200" height="200">
						<control type="image">
							<centerleft>50%</centerleft>
							<centertop>50%</centertop>
							<width>72</width>
							<height>72</height>
							<texture>$INFO[ListItem.ActualIcon]</texture>
							<colordiffuse>Color4</colordiffuse>
							<aspectratio>keep</aspectratio>
							<visible>String.IsEmpty(ListItem.Art(thumb))</visible>
						</control>
						<control type="image">
							<centerleft>50%</centerleft>
							<width>190</width>
							<height>150</height>
							<texture>$INFO[ListItem.Art(thumb)]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<centerleft>50%</centerleft>
							<bottom>10</bottom>
							<width>190</width>
							<height>40</height>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
							<include>dialog_ControlCommons</include>
						</control>
					</itemlayout>
					<focusedlayout width="200" height="200">
						<control type="image">
							<width>200</width>
							<height>199</height>
							<include>dialog_CommonListFocus</include>
						</control>
						<control type="image">
							<centerleft>50%</centerleft>
							<centertop>50%</centertop>
							<width>72</width>
							<height>72</height>
							<texture>$INFO[ListItem.ActualIcon]</texture>
							<colordiffuse>Color1</colordiffuse>
							<aspectratio>keep</aspectratio>
							<visible>String.IsEmpty(ListItem.Art(thumb))</visible>
						</control>
						<control type="image">
							<centerleft>50%</centerleft>
							<width>190</width>
							<height>150</height>
							<texture>$INFO[ListItem.Art(thumb)]</texture>
							<aspectratio>keep</aspectratio>
						</control>
						<control type="label">
							<centerleft>50%</centerleft>
							<bottom>10</bottom>
							<width>190</width>
							<height>40</height>
							<align>center</align>
							<label>$INFO[ListItem.Label]</label>
							<textcolor>Color1</textcolor>
							<include>dialog_ControlCommons</include>
						</control>
					</focusedlayout>
				</control>

			<!--dialog controls-->
				<control type="grouplist" id="9000">
					<right>15</right>
					<top>40</top>
					<width>160</width>
					<height min="40" max="160">auto</height>
					<itemgap>10</itemgap>
					<onleft>450</onleft>
					<orientation>vertical</orientation>
					<!--ok-->
					<include content="dialog_WindowButton">
						<param name="ID" value="413" />
						<param name="Width" value="160" />
						<param name="Label" value="$LOCALIZE[186]" />
					</include>
					<!--cancel-->
					<include content="dialog_WindowButton">
						<param name="ID" value="414" />
						<param name="Width" value="160" />
						<param name="Label" value="$LOCALIZE[222]" />
					</include>
					<!--new folder-->
					<include content="dialog_WindowButton">
						<param name="ID" value="415" />
						<param name="Width" value="160" />
						<param name="Label" value="$LOCALIZE[119]" />
					</include>
				</control>
			</control>
		</control>
	</controls>
</window>