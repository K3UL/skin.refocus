<includes>
	<include name="home_clock">
		<control type="label" id="200">
			<posx>25r</posx>
			<label>[B]$INFO[System.Time][/B]</label>
			<shadowcolor>black</shadowcolor>
			<include>toast_Top</include>
			<visible>![Window.IsActive(fullscreenvideo) + Window.IsActive(infodialog)]</visible>
			<include>fadeinout</include>		
		</control>
		<control type="label" id="200">
			<posx>25r</posx>
			<label>$INFO[System.Date]</label>
			<textcolor>Color1</textcolor>
			<shadowcolor>black</shadowcolor>
			<include>fadeinout</include>	
			<include>toast_Bottom</include>
			<visible>!Window.IsActive(fullscreenvideo)</visible>
		</control>
		<control type="label" id="200">
			<posx>25r</posx>
			<label>$LOCALIZE[31068] $INFO[Player.FinishTime]</label>
			<textcolor>Color1</textcolor>
			<shadowcolor>black</shadowcolor>
			<include>fadeinout</include>	
			<include>toast_Bottom</include>		
			<visible>!Window.IsActive(home) + ![Window.IsActive(fullscreenvideo) + Window.IsActive(infodialog)]</visible>
		</control>
	</include>
	<include name="home_statuslabel">
		<posy>7</posy>
		<width>screen_Width</width>
		<font>rss</font>
		<align>center</align>
		<pauseatend>6000</pauseatend>
		<scroll>false</scroll>
		<scrollout>false</scrollout>
		<aligny>center</aligny>
		<textcolor>Color2</textcolor>
		<include>fadeinout</include>
	</include>
	<include name="homeMenusLayout">
		<itemlayout width="640" height="52">
			<control type="label">
				<posx>20</posx>
				<posy>70</posy>
				<posy>100</posy>
				<width>640</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>left</align>
				<label>$INFO[ListItem.Label]</label>
				<textcolor>Color0</textcolor>
			</control>
		</itemlayout>			
		<focusedlayout width="640" height="52">
			<control type="image">
				<posy>0</posy>
				<width>375</width>
				<height>200</height>
				<aspectratio align="left">stretch</aspectratio>
				<texture border="1">home/menuSelect.png</texture>
				<include>home_ListScroll</include>
				<animation effect="fade" start="100" end="50" time="350" condition="System.IdleTime(5)">Conditional</animation>
			</control>
			<control type="image">
				<posy>0</posy>
				<width>950</width>
				<height>200</height>
				<aspectratio align="left">stretch</aspectratio>
				<texture border="80,0,0,0">home/menuSelect.png</texture>
				<include>home_ListScroll</include>
				<visible allowhiddenfocus="true">[Container(9000).HasFocus(20) | Container(9000).HasFocus(21) | Container(9000).HasFocus(17)]</visible>	
			</control>
			<control type="label">
				<posy>70</posy>
				<posx>20</posx>
				<width>640</width>
				<height>50</height>
				<font>homeMenu</font>
				<align>left</align>
				<textcolor>Color5</textcolor>
				<label>$INFO[ListItem.Label]</label>
				<visible>![Container(9000).HasFocus(20) | Container(9000).HasFocus(21) | Container(9000).HasFocus(17)] + ![Window.IsActive(playercontrols)]</visible>
			</control>
			<control type="label">
				<posy>70</posy>
				<posx>15</posx>
				<width>640</width>
				<height>50</height>
				<font>homeMenuInfo</font>
				<align>left</align>
				<textcolor>Color5</textcolor>
				<label>[LOWERCASE]$INFO[ListItem.Label2][/LOWERCASE]</label>
				<visible>Container(9000).HasFocus(20) | Container(9000).HasFocus(21) | Container(9000).HasFocus(17)</visible>
			</control>
		</focusedlayout>
	</include>
	
	<!---HOME2------>
	<include name="label_Home-status">
		<width>300</width>
		<height>45</height>
		<font>smallCaps</font>
		<textoffsetx>15</textoffsetx>
		<textcolor>Color3</textcolor>

	</include>
	<include name="button_Home-item">
		<width>325</width>
		<height>50</height>
		<font>titleAlt</font>
		<align>left</align>
		<textoffsetx>15</textoffsetx>
		<textoffsety>3</textoffsety>
		<textcolor>Color2</textcolor>
		<focusedcolor>Color5</focusedcolor>
		<onleft>SetProperty(Home.Item,none)</onleft>
		<onback>SetProperty(Home.Item,none)</onback>
		<texturenofocus border="8">home/column.png</texturenofocus>
		<texturefocus border="8">home/column-focus.png</texturefocus>
		<bordersize>10</bordersize>

	</include>
	<include name="button_Home-subitem">
		<width>325</width>
		<height>50</height>
		<font>titleAlt</font>
		<align>left</align>
		<textoffsetx>15</textoffsetx>
		<textoffsety>3</textoffsety>
		<textcolor>Color2</textcolor>
		<focusedcolor>Color5</focusedcolor>
		<onleft>SetProperty(Home.Item,none)</onleft>
		<onback>SetProperty(Home.Item,none)</onback>
		<texturenofocus border="8">home/column_sub.png</texturenofocus>
		<texturefocus border="8">home/column-focus.png</texturefocus>

		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="100" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="100" />
		</animation>
	</include>
</includes>