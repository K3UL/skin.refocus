<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="home_Background">
		<control type="group">
			<visible>!Control.HasFocus(9200)</visible>
			<visible>![Control.HasFocus(9000) + Skin.HasSetting(widgets.push) + !IsEmpty(Container(9000).ListItem.Property(Widget))] | Skin.HasSetting(widgets.disable)</visible>
			<include>fadeinout</include>
			<control type="image">
				<texture background="true" fallback="special://skin/backgrounds/defaults/kodi.jpg">$VAR[home:Background]</texture>
				<include>home_Slideshow</include>
				<visible>[Skin.String(homebackground,single) | Skin.String(homebackground,fanart) | IsEmpty(Skin.String(homebackground))] + ![Player.HasAudio + Skin.HasSetting(home.nowplaying) + !Skin.HasSetting(artistslideshow.disable)]</visible>
			</control>
			<control type="multiimage">
				<timeperimage>slideshow_Timer</timeperimage>
				<imagepath fallback="special://skin/backgrounds/">$VAR[home:Background]</imagepath>
				<visible>Skin.String(homebackground,multi) | [Player.HasAudio + Skin.HasSetting(home.nowplaying) + !Skin.HasSetting(artistslideshow.disable)]</visible>
			</control>
			<control type="image">
				<include>screen_Dimensions</include>
				<texture>overlays/vignette_top.png</texture>
				<aspectratio>scale</aspectratio>
				<visible>!Skin.HasSetting(widgets.disable) | [Skin.HasSetting(widgets.disable) + Player.HasAudio + Skin.HasSetting(home.nowplaying)] | [!Skin.HasSetting(widgets.disable) + !IsEmpty(Container(9000).ListItem.Property(Widget)) + !Skin.HasSetting(widgetheader.disable)]</visible>
				<include>fadeinout</include>
			</control>
		</control>
		<!--fanart slideshow info-->
		<control type="group">
			<animation effect="slide" start="0,0" end="0,-20" time="0" condition="System.GetBool(lookandfeel.enablerssfeeds)">Conditional</animation>
			<visible>!Control.HasFocus(9200) + IsEmpty(Container(9000).ListItem.Property(Widget))</visible>
			<visible>Skin.String(homebackground,fanart) + ![Player.HasMedia + Skin.HasSetting(home.nowplaying)]</visible>
			<control type="label">
				<right>25</right>
				<bottom>25</bottom>
				<width>850</width>
				<label>$VAR[home:Slideshow.Info]</label>
				<font>condensed-U</font>
				<textcolor>Color1</textcolor>
				<shadowcolor>Color5</shadowcolor>
				<align>right</align>
				<visible>Skin.String(fanartinfo.text,true)</visible>
			</control>
			<control type="image">
				<right>25</right>
				<bottom>25</bottom>
				<width>256</width>
				<height>99</height>
				<texture>$VAR[home:Slideshow.Info]</texture>
				<aspectratio>keep</aspectratio>
				<visible>Skin.String(fanartinfo.logo,true)</visible>
			</control>
		</control>
		<!--now playing video-->
		<control type="group">
			<visible>Player.HasVideo + Skin.HasSetting(home.nowplaying)</visible>
			<control type="image">
				<include>screen_Dimensions</include>
				<include>fadeinout</include>
				<texture>black.png</texture>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="videowindow">
				<include>screen_Dimensions</include>
				<include>fadeinout</include>
			</control>
		</control>
	</include>

	<include name="home_Slideshow">
		<include>screen_Dimensions</include>
		<aspectratio align="center">scale</aspectratio>
		<randomize>true</randomize>
		<loop>yes</loop>
		<timeperimage>slideshow_Timer</timeperimage>
		<fadetime>fadetime_Slideshow</fadetime>
	</include>

	<include name="widget_Header">
		<control type="group">
			<left>25</left>
			<top>15</top>
			<animation effect="slide" start="0" end="320" time="0" condition="StringCompare(Skin.String(homemenu.type),vertical)">Conditional</animation>
			<include>fadeinout</include>
			<visible>!Window.IsActive(busydialog) + !Window.IsActive(script-ExtendedInfo Script-DialogVideoInfo.xml)</visible>
			<visible>!IsEmpty(Container(9000).ListItem.Property(Widget)) + ![Skin.HasSetting(widgetheader.disable) + [Control.HasFocus(9000) | Control.HasFocus(9100)]]</visible>
			<visible>![!Player.HasAudio + StringCompare(Container(9000).ListItem.Property(widget),NowPlaying)]</visible>
			<control type="image">
				<width>48</width>
				<height>48</height>
				<texture>$VAR[widget:Icon]</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
			<control type="group">
				<left>55</left>
				<control type="label">
					<width>1060</width>
					<label>$INFO[Container(9000).ListItem.Property(widgetName)]</label>
					<font>semibold-U</font>
					<textcolor>Color1</textcolor>
				</control>
				<control type="group">
					<top>21</top>
					<control type="label">
						<width>1060</width>
						<label>$VAR[widget:Header]</label>
						<font>regular_Small-U</font>
						<textcolor>Color1</textcolor>
						<include>fadeinout</include>
					</control>
				</control>
			</control>
		</control>
	</include>

	<include name="widget_Vertical-Art">
		<definition>
			<control type="image">
				<width>screen_Width</width>
				<height>screen_Height</height>
				<texture>$VAR[widget:ArtFallback]</texture>
				<aspectratio>scale</aspectratio>
			</control>	
			<control type="multiimage">
				<width>screen_Width</width>
				<height>screen_Height</height>
				<imagepath background="true">$INFO[ListItem.Property(MultiImage)]</imagepath>
				<timeperimage>8000</timeperimage>
				<aspectratio>scale</aspectratio>
				<visible>SubString(Skin.String(WeatherFanart.path),.multi)</visible>
			</control>
			<control type="group">
				<width>screen_Width</width>
				<height>screen_Height</height>
				<visible>StringCompare(Container(9000).ListItem.Property(widgetType),PlayingVideo)</visible>
				<control type="image">
					<width>screen_Width</width>
					<height>screen_Height</height>
					<texture>black.png</texture>
				</control>
				<control type="videowindow">
					<width>screen_Width</width>
					<height>screen_Height</height>
				</control>
			</control>

			<control type="image">
				<width>screen_Width</width>
				<height>screen_Height</height>
				<texture>overlays/vignette_full.png</texture>
			</control>
		</definition>
	</include>

	<include name="widget_Vertical-Info">
		<param name="TextWidth" default="860"/>
		<definition>
			<control type="group">
				<left>50</left>
				<top>550</top>
				<animation type="Conditional" condition="Window.IsActive(script-ExtendedInfo Script-DialogVideoInfo.xml)">
					<effect type="Fade" time="200" start="100" end="0" easing="In" delay="100"/>
				</animation>
				<!--
				<control type="image">
					<width>64</width>
					<height>64</height>
					<texture>$INFO[ListItem.ActualIcon]</texture>
					<visible>StringCompare(Container(9000).ListItem.Property(widgetType),weather)</visible>
					<colordiffuse>Color1</colordiffuse>
				</control>
				-->
				<!--
				<control type="image">
					<width>1170</width>
					<height>200</height>
					<texture>colorize/100.png</texture>
				</control>
				-->
				<control type="label">
					<width>$PARAM[TextWidth]</width>
					<label>$VAR[widget:Item.Label1]</label>
					<font>black_Title</font>
					<textcolor>Color1</textcolor>
					<selectedcolor>Color1</selectedcolor>
				</control>
				<control type="label">
					<top>28</top>
					<width>$PARAM[TextWidth]</width>
					<label>$VAR[widget:Item.Label2]</label>
					<font>semibold_Small-U</font>
					<textcolor>Color1</textcolor>
					<selectedcolor>Color1</selectedcolor>
				</control>
				<control type="textbox">
					<top>60</top>
					<width>$PARAM[TextWidth]</width>
					<height>85</height>
					<label>$VAR[widget:Item.Description]</label>
					<include>detail_Text</include>
					<autoscroll delay="autoscroll_Delay" time="autoscroll_Time" repeat="10000">Skin.HasSetting(autoscroll.enable)</autoscroll>
					<visible>!Control.HasFocus(9200)</visible>
				</control>
				<control type="textbox">
					<top>60</top>
					<width>1170</width>
					<height>85</height>
					<label>$VAR[widget:Item.Description]</label>
					<include>detail_Text</include>
					<autoscroll delay="autoscroll_Delay" time="autoscroll_Time" repeat="10000">Skin.HasSetting(autoscroll.enable)</autoscroll>
					<visible>Control.HasFocus(9200)</visible>
				</control>
			</control>
		</definition>
	</include>

	<include name="widget_Container">
		<param name="ContainerLeft" default="0"/>
		<param name="ContainerTop" default="0"/>
		<param name="ContainerWidth" default="1620"/>
		<param name="ContainerHeight" default="screen_Height"/>
		<param name="OnLeft" default="9000"/>
		<param name="OnRight"/>
		<param name="OnUp"/>
		<param name="OnDown"/>
		<param name="Orientation" default="vertical"/>
		<param name="PageControl" definition="70"/>
		<param name="ArtWidth" default="screen_Width"/>
		<param name="ArtHeight" default="screen_Height"/>
		<param name="ArtAspect" default="scale"/>
		<param name="TextLeft" default="60"/>
		<param name="TextTop" default="550"/>
		<param name="HeaderLeft"/>
		<param name="HeaderTop" default="15"/>
		<definition>
			<control type="list" id="19200">
				<left>$PARAM[ContainerLeft]</left>
				<top>$PARAM[ContainerTop]</top>
				<width>$PARAM[ContainerWidth]</width>
				<height>$PARAM[ContainerHeight]</height>
				<onleft>$PARAM[OnLeft]</onleft>
				<onright>$PARAM[OnRight]</onright>
				<onup>$PARAM[OnUp]</onup>
				<ondown>$PARAM[OnDown]</ondown>
				<onback>9000</onback>
				<oninfo condition="IsEmpty(Container(9200).ListItem.TVShowTitle) + IsEmpty(Container(9200).ListItem.Artist)">RunScript(script.extendedinfo,info=extendedinfo,name=$INFO[Container(9200).ListItem.Title],imdb_id=$INFO[Container(9200).ListItem.IMDBNumber])</oninfo>
				<oninfo condition="!IsEmpty(Container(9200).ListItem.TVShowTitle)">RunScript(script.extendedinfo,info=extendedtvinfo,name=$INFO[Container(9200).ListItem.TVShowTitle],imdb_id=$INFO[Container(9200).ListItem.IMDBNumber])</oninfo>
				<orientation>$PARAM[Orientation]</orientation>
				<preloaditems>2</preloaditems>
				<pagecontrol>$PARAM[PageControl]</pagecontrol>
				<autoscroll time="autoscroll_Widget">Control.HasFocus(9000) + Skin.HasSetting(widgets.autoscroll)</autoscroll>
				<include>toggle_Widget</include>
				<include>global_Scrolltime</include>
				<itemlayout width="screen_Width" height="screen_Height">
					<control type="image">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<texture background="true">$VAR[art:Fanart]</texture>
						<aspectratio>$PARAM[ArtAspect]</aspectratio>
						<fadetime>250</fadetime>
					</control>
					<control type="image">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<texture>overlays/vignette_full.png</texture>
						<aspectratio>$PARAM[ArtAspect]</aspectratio>
					</control>
					<include>widget_Data</include>
				</itemlayout>
				<focusedlayout width="screen_Width" height="screen_Height">
					<control type="image">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<texture background="true">$VAR[art:Fanart]</texture>
						<aspectratio>$PARAM[ArtAspect]</aspectratio>
						<fadetime>250</fadetime>
					</control>
					<control type="image">
						<width>$PARAM[ArtWidth]</width>
						<height>$PARAM[ArtHeight]</height>
						<texture>overlays/vignette_full.png</texture>
						<aspectratio>$PARAM[ArtAspect]</aspectratio>
					</control>
					<control type="group">
						<left>$PARAM[TextLeft]</left>
						<top>$PARAM[TextTop]</top>
						<animation type="Conditional" condition="Window.IsActive(script-ExtendedInfo Script-DialogVideoInfo.xml)">
							<effect type="Fade" time="200" start="100" end="0" easing="In" delay="100"/>
						</animation>
						<control type="label">
							<width>$PARAM[TextWidth]</width>
							<label>$VAR[widget:Item.Title]</label>
							<font>black_Title</font>
							<textcolor>Color1</textcolor>
							<selectedcolor>Color1</selectedcolor>
						</control>
						<control type="label">
							<top>28</top>
							<width>$PARAM[TextWidth]</width>
							<label>$VAR[widget:Item.Info]</label>
							<font>semibold_Small-U</font>
							<textcolor>Color1</textcolor>
							<selectedcolor>Color1</selectedcolor>
						</control>
						<control type="textbox">
							<top>60</top>
							<width>$PARAM[TextWidth]</width>
							<height>85</height>
							<label>$VAR[widget:Item.Description]</label>
							<include>detail_Text</include>
							<autoscroll delay="autoscroll_Delay" time="autoscroll_Time" repeat="10000">Skin.HasSetting(autoscroll.enable)</autoscroll>
							<visible>!StringCompare(Window(Home).Property(WidgetState),open)</visible>
						</control>
						<control type="textbox">
							<top>60</top>
							<width>1170</width>
							<height>85</height>
							<label>$VAR[widget:Item.Description]</label>
							<include>detail_Text</include>
							<autoscroll delay="autoscroll_Delay" time="autoscroll_Time" repeat="10000">Skin.HasSetting(autoscroll.enable)</autoscroll>
							<visible>StringCompare(Window(Home).Property(WidgetState),open)</visible>
						</control>
					</control>
				</focusedlayout>
				<!--
				<content target="$INFO[Container(9000).ListItem.Property(widgetTarget)]">$INFO[Container(9000).ListItem.Property(widgetPath)]</content>
				-->
			</control>
		</definition>
	</include>
</includes>