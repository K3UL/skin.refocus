<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<include>transition_Dialog</include>
	<coordinates>
		<system>1</system>
		<left>290</left>
		<top>250</top>
	</coordinates>
	<controls>
		<control type="group">
			<control type="image">
				<width>700</width>
				<height>435</height>
				<include>dialog_Window</include>
			</control>
			<control type="label" id="1">
				<width>692</width>
				<scroll>true</scroll>
				<label>$INFO[VideoPlayer.ChannelGroup]</label>
				<include>dialog_Windowtitle</include>
				<visible>PVR.IsPlayingTV</visible>
			</control>
			<control type="label" id="1">
				<left>4</left>
				<top>55</top>
				<width>692</width>
				<label>$INFO[System.Date]$INFO[System.Time, - ]</label>
				<include>dialog_Header</include>
				<include>dialog_ControlCommons</include>
			</control>
			<control type="image">
				<left>4</left>
				<top>95</top>
				<width>692</width>
				<include>dialog_SectionSeparator</include>
			</control>
			<control type="list" id="11">
				<left>4</left>
				<top>95</top>
				<width>692</width>
				<height>320</height>
				<onleft>PreviousChannelGroup</onleft>
				<onright>NextChannelGroup</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<include>global_ListScroll</include>
				<itemlayout width="663" height="80">
					<control type="image">
						<width>692</width>
						<height>80</height>
						<include>dialog_CommonList</include>
					</control>
					<control type="image">
						<left>4</left>
						<top>4</top>
						<width>72</width>
						<height>72</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="LiveTV.png">$INFO[ListItem.Thumb]</texture>
					</control>
					<control type="group">
						<left>75</left>
						<top>6</top>
						<control type="label">
							<width>540</width>
							<label>$INFO[ListItem.ChannelNumber,,. ]$INFO[ListItem.ChannelName]</label>
							<include>dialog_Title</include>
							<include>dialog_CommonListItem</include>
						</control>
						<control type="label">
							<top>25</top>
							<width>540</width>
							<label>$INFO[ListItem.Title,, • ]$LOCALIZE[209]$INFO[ListItem.NextTitle,: ]$INFO[ListItem.NextStartTime, (]$INFO[ListItem.NextEndTime, - ,)]</label>
							<include>dialog_CommonListItem</include>
						</control>
					</control>
					<control type="image">
						<left>655</left>
						<top>28</top>
						<texture>$VAR[pvr_Status]</texture>
						<include>dialog_PVRstatus</include>
					</control>
				</itemlayout>
				<focusedlayout width="663" height="80">
					<control type="image">
						<width>692</width>
						<height>80</height>
						<include>dialog_CommonList</include>
					</control>
					<control type="image">
						<width>692</width>
						<height>80</height>
						<include>dialog_CommonListFocus</include>
					</control>
					<control type="image">
						<left>4</left>
						<top>4</top>
						<width>72</width>
						<height>72</height>
						<aspectratio>stretch</aspectratio>
						<texture fallback="LiveTV.png">$INFO[ListItem.Thumb]</texture>
					</control>
					<control type="group">
						<left>75</left>
						<top>6</top>
						<control type="label">
							<width>540</width>
							<label>$INFO[ListItem.ChannelNumber,,. ]$INFO[ListItem.ChannelName]</label>
							<include>dialog_Title</include>
							<include>dialog_CommonListItemFocus</include>
						</control>
						<control type="label">
							<top>25</top>
							<width>540</width>
							<label>$INFO[ListItem.Title,, • ]$LOCALIZE[209]$INFO[ListItem.NextTitle,: ]$INFO[ListItem.NextStartTime, (]$INFO[ListItem.NextEndTime, - ,)]</label>
							<include>dialog_CommonListItemFocus</include>
						</control>
					</control>
					<control type="image">
						<left>655</left>
						<top>28</top>
						<texture>$VAR[pvr_Status]</texture>
						<colordiffuse>Color1</colordiffuse>
						<include>dialog_PVRstatus</include>
					</control>
				</focusedlayout>
			</control>
		</control>
	</controls>
</window>