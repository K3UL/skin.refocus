<includes>
<!---PORTRAIT------>
	<include name="view_SlidePoster">
		<control type="fixedlist" id="52">
			<viewtype label="Slide">info</viewtype>
			<posx>-2</posx>
			<posy>90</posy>
			<width>1450</width>
			<height>425</height>
			<onup>6000</onup>
			<ondown>72</ondown>
			<onleft>52</onleft>
			<onright>52</onright>
			<focusposition>1</focusposition>
			<pagecontrol>72</pagecontrol>
			<scrolltime tween="Cubic" easing="Out">400</scrolltime>
			<orientation>horizontal</orientation>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include>toggle_Menu</include>
			<visible>[Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | SubString(Container.FolderPath,plugin://plugin.video.xbmcflicks)]</visible>
			<itemlayout height="400" width="205">
				<control type="image">
					<width>228</width>
					<height>316</height>
					<texture fallback="thumbs/movie_portrait.jpg" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio align="center">stretch</aspectratio>
					<visible>Container.Content(movies) | SubString(Container.FolderPath,plugin://plugin.video.xbmcflicks)</visible>
				</control>
				<control type="image">
					<width>228</width>
					<height>316</height>
					<texture fallback="thumbs/tvshow_portrait.jpg" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio align="center">stretch</aspectratio>
					<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
				</control>
				<control type="image">
					<posx>174</posx>
					<posy>262</posy>
					<include>overlay_UnWatched</include>
					<visible>!Control.HasFocus(8000) + [Container.Content(movies) + Skin.HasSetting(overlay.movies) | Container.Content(tvshows) + Skin.HasSetting(overlay.tvshows)]</visible>
				</control>
			</itemlayout>
			<focusedlayout height="400" width="205">
				<control type="image">
					<width>228</width>
					<height>316</height>
					<texture fallback="thumbs/movie_portrait.jpg" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio align="center">stretch</aspectratio>
					<include>focus_SlidePoster</include>
					<visible>Container.Content(movies) | SubString(Container.FolderPath,plugin://plugin.video.xbmcflicks)</visible>
				</control>
				<control type="image">
					<width>228</width>
					<height>316</height>
					<texture fallback="thumbs/tvshow_portrait.jpg" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="40">frames/frame_Square.png</bordertexture>
					<bordersize>22</bordersize>
					<aspectratio align="center">stretch</aspectratio>
					<include>focus_SlidePoster</include>
					<visible>Container.Content(tvshows) | Container.Content(seasons)</visible>
				</control>
				<control type="image">
					<posx>174</posx>
					<posy>262</posy>
					<include>overlay_UnWatched</include>
					<include>focus_SlidePoster</include>
					<visible>!Control.HasFocus(8000) + [Container.Content(movies) + Skin.HasSetting(overlay.movies) | Container.Content(tvshows) + Skin.HasSetting(overlay.tvshows)]</visible>
				</control>
			</focusedlayout>
		</control>	
	</include>

<!---LANDSCAPE------>
	<include name="view_SlideLandscape">
		<control type="fixedlist" id="521">
			<viewtype label="WideSlide">biginfo</viewtype>
			<posx>-610</posx>
			<posy>130</posy>
			<width>2200</width>
			<height>430</height>
			<onleft>521</onleft>
			<onright>521</onright>
			<onup>6000</onup>
			<ondown>72</ondown>
			<focusposition>2</focusposition>
			<pagecontrol>72</pagecontrol>
			<scrolltime tween="Cubic" easing="Out">400</scrolltime>
			<preloaditems>2</preloaditems>
			<orientation>horizontal</orientation>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include>toggle_Menu</include>
			<visible>[[Container.Content(movies) + !SubString(Container.FolderPath,plugin://plugin.video.apple,Left)] | Container.Content(tvshows) | Container.Content(episodes) | Container.Content(musicvideos) | Container.Content(artists) | [Container.Content(files) + Container.HasFiles]]</visible>
			<include condition="Window.IsVisible(videolibrary)">SlideWideVideo</include>
			<include condition="Window.IsVisible(musiclibrary)">SlideWideMusic</include>
		</control>	
	</include>
