<!---ALBUMS------>
	<include name="view_SlideMusic">
		<control type="wraplist" id="52">
			<viewtype label="Slide">info</viewtype>
			<posx>-55</posx>
			<posy>105</posy>
			<width>1400</width>
			<height>600</height>
			<onleft>52</onleft>
			<onright>52</onright>
			<onup>6000</onup>
			<ondown>72</ondown>
			<pagecontrol>72</pagecontrol>
			<focusposition>1</focusposition>
			<scrolltime tween="Cubic" easing="Out">400</scrolltime>
			<orientation>horizontal</orientation>
			<visible>[Container.Content(albums) | Container.Content(singles) | Container.Content(songs)]</visible>
			<include>transition_Container</include>
			<include>infoDialogHide</include>
			<include>toggle_Menu</include>
			<itemlayout height="226" width="280">
				<control type="image">
					<width>300</width>
					<height>300</height>
					<texture fallback="thumbs/album.png" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="27" width="400" height="315">frames/frame_Landscape.png</bordertexture>
					<bordersize>27</bordersize>
					<aspectratio>scale</aspectratio>
				</control>
			</itemlayout>
			<focusedlayout height="250" width="280">	
				<control type="image">
					<width>300</width>
					<height>300</height>
					<texture fallback="thumbs/album.png" background="true">$INFO[ListItem.Thumb]</texture>
					<bordertexture border="27" width="400" height="315">frames/frame_Landscape.png</bordertexture>
					<bordersize>27</bordersize>
					<aspectratio>scale</aspectratio>
					<include>focus_SlideMusic</include>
				</control>
			</focusedlayout>
		</control>
	</include>
</includes>