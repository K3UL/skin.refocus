<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1160">
	<defaultcontrol always="true">500</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="grouplist" id="500">
			<left>460</left>
			<top>0</top>
			<width>352</width>
			<height>screen_Height</height>
			<onup>500</onup>
			<ondown>500</ondown>
			<onright>402</onright>
			<itemgap>0</itemgap>
			<align>center</align>
			<include>global_ListScroll</include>
			<include>transition_Dialog</include>
			<control type="image" id="499">
				<width>352</width>
				<height>20</height>
				<texture border="20,0,20,0">dialogs/frame/menu_top.png</texture>
			</control>
			<!--trailer-->
			<control type="button" id="501">
				<width>352</width>
				<label>$LOCALIZE[20410]</label>					
				<onclick>Close</onclick>
				<onclick>Dialog.Close(movieinformation)</onclick>
				<onclick>SendClick(2003,11)</onclick>
				<include>dialog_MenuButton</include>
				<enable>!IsEmpty(ListItem.Trailer)</enable>
			</control>
			<!--director movies-->
			<control type="button" id="502">
				<width>352</width>
				<label>From the same director</label>
				<onclick>Close</onclick>
				<onclick>Dialog.Close(movieinformation)</onclick>
				<onclick>SetProperty(extContent,$LOCALIZE[31620],Home)</onclick>
				<onclick>SetProperty(extDirector,$INFO[ListItem.Director],Home)</onclick>
				<onclick>SetProperty(extTitle,$INFO[ListItem.Label],Home)</onclick>
				<!--<onclick>ActivateWindow(1140)</onclick>-->

				<onclick>ActivateWindow(videos,plugin://script.extendedinfo?info=discography&amp;&amp;artistname=INSERT_ARTIST_NAME_HERE)</onclick>


				<include>dialog_MenuButton</include>
			</control>
			<!--writer movies-->
			<control type="button" id="503">
				<width>352</width>
				<label>From the same writer</label>
				<onclick>Close</onclick>
				<onclick>Dialog.Close(movieinformation)</onclick>
				<onclick>SetProperty(extContent,$LOCALIZE[31621],Home)</onclick>
				<onclick>SetProperty(extWriter,$INFO[ListItem.Writer],Home)</onclick>
				<onclick>SetProperty(extTitle,$INFO[ListItem.Label],Home)</onclick>
				<onclick>ActivateWindow(1140)</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<!--similar movies-->
			<control type="button" id="504">
				<width>352</width>
				<label>Similar movies</label>
				<onclick>Close</onclick>
				<onclick>Dialog.Close(movieinformation)</onclick>
				<onclick>SetProperty(extContent,$LOCALIZE[31622],Home)</onclick>
				<onclick>SetProperty(extDBID,$INFO[ListItem.DBID],Home)</onclick>
				<onclick>ActivateWindow(1140)</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<!--search youtube-->
			<control type="button" id="505">
				<width>352</width>
				<label>Search on Youtube</label>
				<onclick>Close</onclick>
				<onclick>Dialog.Close(movieinformation)</onclick>
				<onclick>SetProperty(extContent,Youtube,Home)</onclick>
				<onclick condition="Container.Content(albums) | Container.Content(songs)">SetProperty(YouTubeQuery,$INFO[ListItem.Artist] $INFO[ListItem.Label],Home)</onclick>
				<onclick condition="Container.Content(artists) | Container.Content(actors) | Container.Content(directors) | Container.Content(movies) | Container.Content(tvshows)">SetProperty(YouTubeQuery,$INFO[ListItem.Label],Home)</onclick>
				<onclick>ActivateWindow(1140)</onclick>
				<include>dialog_MenuButton</include>
			</control>
			<control type="image" id="513">
				<width>352</width>
				<height>20</height>
				<texture border="20,0,20,0">dialogs/frame/menu_bottom.png</texture>
			</control>
		</control>
	</controls>
</window>