<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>-</defaultcontrol>
	<controls>
		<control type="image" id="1">
			<include>screen_Dimensions</include>
			<texture border="16">overlays/vignette.png</texture>
			<visible>Window.IsActive(infodialog)</visible>
			<include>fadeinout</include>
		</control>
		<!--regular stream info-->
		<control type="group" id="0">
			<control type="image" id="1">
				<width>Screen_Width</width>
				<height>170</height>
				<texture>white.png</texture>
				<colordiffuse>base_2</colordiffuse>
			</control>
			<control type="group" id="1">
				<left>20</left>
				<top>20</top>
				<!--line 1-->
				<control type="label" id="10">
					<width>1260</width>
					<label>-</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--line 2-->
				<control type="label" id="11">
					<top>50</top>
					<width>1260</width>
					<label>-</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--line 3-->
				<control type="label" id="12">
					<top>100</top>
					<width>1260</width>
					<label>-</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
			</control>
		</control>
		<!--pvr stream info-->
		<control type="group" id="1">
			<visible>Player.ShowCodec + VideoPlayer.Content(LiveTV) + System.GetBool(pvrplayback.signalquality)</visible>
			<control type="image" id="1">
				<width>Screen_Width</width>
				<height>230</height>
				<texture>white.png</texture>
				<colordiffuse>base_2</colordiffuse>
			</control>
			<control type="group">
				<left>20</left>
				<top>0</top>
				<!--header-->
				<control type="label" id="1">
					<top>5</top>
					<width>1260</width>
					<label>[B]$LOCALIZE[19005][/B]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--backend-->
				<control type="label" id="1">
					<top>31</top>
					<width>1260</width>
					<label>$LOCALIZE[19012]$INFO[PVR.ActStreamClient,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--device-->
				<control type="label" id="1">
					<top>58</top>
					<width>1260</width>
					<label>$LOCALIZE[19006]$INFO[PVR.ActStreamDevice,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--signal-->
				<control type="label" id="1">
					<top>85</top>
					<width>1260</width>
					<label>$LOCALIZE[19008]$INFO[PVR.ActStreamStatus,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--signal progressbar-->
				<control type="progress" id="1">
					<right>20</right>x
					<top>89</top>
					<width>910</width>
					<height>14</height>
					<info>PVR.ActStreamProgrSignal</info>
				</control>
				<!--SNR-->
				<control type="label" id="1">
					<top>112</top>
					<width>1260</width>
					<label>$LOCALIZE[19009]$INFO[PVR.ActStreamSNR,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--SNR progressbar-->
				<control type="progress" id="1">
					<right>20</right>
					<top>116</top>
					<width>910</width>
					<height>14</height>
					<overlaytexture>-</overlaytexture>
					<info>PVR.ActStreamProgrSNR</info>
				</control>
				<!--BER-->
				<control type="label" id="1">
					<top>139</top>
					<width>1260</width>
					<label>$LOCALIZE[19010]$INFO[PVR.ActStreamBER,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--UNC-->
				<control type="label" id="1">
					<top>166</top>
					<width>1260</width>
					<label>$LOCALIZE[19011]$INFO[PVR.ActStreamUNC,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
				<!--encryption-->
				<control type="label" id="1">
					<top>193</top>
					<width>1260</width>
					<label>$LOCALIZE[19015]$INFO[PVR.ActStreamEncryptionName,: ]</label>
					<textcolor>Color1</textcolor>
					<include>detail_Sub</include>
				</control>
			</control>
		</control>
	</controls>
</window>