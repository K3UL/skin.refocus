<?xml version="1.0" encoding="UTF-8"?>
<overrides>
	<shortcut label="Watchlist" type="Lists your featured movies" grouping="customvideonode" thumbnail="Watchlist.png" condition="Library.HasContent(movies)">ActivateWindow(Videos,plugin://script.watchlist?type=movies,return)</shortcut>
	<shortcut label="Watchlist" type="Lists your featured episodes" grouping="customvideonode" thumbnail="Watchlist.png" condition="Library.HasContent(tvshows)">ActivateWindow(Videos,plugin://script.watchlist?type=episodes,return)</shortcut>
	<shortcut label="Unwatched" type="Movies" grouping="movie" thumbnail="DefaultMovies.png" condition="Library.HasContent(movies)">ActivateWindow(Videos,special://skin/playlists/video/movies-unwatched.xsp,return))</shortcut>
	<shortcut label="Unwatched" type="Episodes" grouping="tvshow" thumbnail="DefaultTVShows.png" condition="Library.HasContent(tvshows)">ActivateWindow(Videos,special://skin/playlists/video/episodes-unwatched.xsp,return))</shortcut>
	<shortcut label="In Progress" type="Movies" grouping="movie" thumbnail="DefaultMovies.png" condition="Library.HasContent(movies)">ActivateWindow(Videos,special://skin/playlists/video/movies-in progress.xsp,return)</shortcut>
	<shortcut label="Trailers" type="Movies" grouping="movie" thumbnail="DefaultMovies.png" condition="System.HasAddon(plugin.video.the.trailers)">ActivateWindow(Videos,plugin://plugin.video.the.trailers/,return)</shortcut>
	<shortcut label="TV Guide" type="Program" grouping="tvshow" thumbnail="DefaultTVShows.png" condition="!Skin.HasSetting(nextaired.disable)">RunAddon(script.tv.show.next.aired)</shortcut>
	<shortcut label="Customize menu" type="Opens the home menu customization window" grouping="common" thumbnail="Settings.png">RunScript(script.skinshortcuts,type=manage&amp;nolabels=True&amp;group=mainmenu)</shortcut>
	<shortcut label="Quit" type="Opens the shutdown menu" grouping="command" thumbnail="Settings.png">ActivateWindow(shutdownmenu)</shortcut>

	<availableshortcutlabel action="ActivateWindow(Videos,special://skin/playlists/video/movies-unwatched.xsp,return)">Unwatched</availableshortcutlabel>
	<availableshortcutlabel action="ActivateWindow(Videos,special://skin/playlists/video/movies-in progress.xsp,return)">In Progress</availableshortcutlabel>
	<availableshortcutlabel action="ActivateWindow(Videos,special://skin/playlists/video/episodes-unwatched.xsp,return)">Unwatched</availableshortcutlabel>
	<availableshortcutlabel action="RunAddon(script.globalsearch)">Search</availableshortcutlabel>
	<availableshortcutlabel action="RunAddon(script.tv.show.next.aired)">TV Guide</availableshortcutlabel>


	<shortcut label="Weather" type="Common Shortcut" grouping="common" thumbnail="Watchlist.png">ActivateWindow(Weather)</shortcut>

