					<posx>34</posx>
					<posy>178</posy>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<font>dialog1</font>
					<textcolor>Color5</textcolor>
					<align>left</align>
					<width>1100</width>
					<include>focus_Banner</include>
					<visible>!IsEmpty(ListItem.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>34</posx>
					<posy>178</posy>
					<label>$INFO[ListItem.Label]</label>
					<font>dialog1</font>
					<textcolor>Color1</textcolor>
					<align>left</align>
					<width>1100</width>
					<include>focus_Banner</include>
					<visible>IsEmpty(ListItem.TVShowTitle)</visible>
				</control>
				<control type="label">
					<posx>34</posx>
					<posy>214</posy>
					<label>$INFO[ListItem.Genre]</label>
					<font>info</font>
					<textcolor>Color4</textcolor>
					<align>left</align>
					<width>900</width>
					<include>focus_Banner</include>
					<visible>![IsEmpty(ListItem.TVShowTitle) + IsEmpty(ListItem.Property(UnWatchedEpisodes))]</visible>
				</control>
				<control type="label">
					<posx>34</posx>
					<posy>238</posy>
					<label>$INFO[ListItem.Property(UnWatchedEpisodes)] $LOCALIZE[16101] $LOCALIZE[20360]</label>
					<font>info</font>
					<textcolor>Color4</textcolor>
					<align>left</align>
					<width>900</width>
					<visible>!IsEmpty(ListItem.Property(UnWatchedEpisodes))</visible>
					<include>focus_Banner</include>
					<visible>![IsEmpty(ListItem.TVShowTitle) + IsEmpty(ListItem.Property(UnWatchedEpisodes))]</visible>
