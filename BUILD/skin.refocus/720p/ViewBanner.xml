				<control type="image">
					<posx>678</posx>
					<posy>214</posy>
					<width>128</width>
					<height>48</height>
					<aspectratio align="right">keep</aspectratio>
					<colordiffuse>Color4</colordiffuse>
					<include>flag_Network-mono</include>
					<include>focus_Banner</include>
				</control>
			</focusedlayout>
		</control>
	</include>

