					<include>focus_Banner</include>
					<visible>!IsEmpty(ListItem.TVShowTitle) + !Skin.HasSetting(banners.local)</visible>
				</control>
				<control type="image">
					<posx>19</posx>
					<posy>16</posy>
					<width>800</width>
					<height>148</height>
					<texture diffuse="frames/frame_Wide-mask.png" fallback="thumbs/tvshow_banner.jpg">$INFO[ListItem.path]banner.jpg</texture>
					<aspectratio scalediffuse="false" align="center">stretch</aspectratio>
					<include>focus_Banner</include>
					<visible>!IsEmpty(ListItem.TVShowTitle) + Skin.HasSetting(banners.local)</visible>
